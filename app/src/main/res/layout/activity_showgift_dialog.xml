<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/default_padding_view_text"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_padding_view_text"
        android:background="@drawable/pop_bg_white"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_padding_view_edge"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/show_gift_head_iv"
                android:layout_width="@dimen/default_height_head_chat"
                android:layout_height="@dimen/default_height_head_chat"
                android:src="@drawable/main_img_defaulthead_un" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/default_padding_view_edge"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/show_gift_nick"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/default_textsize_15" />

                <TextView
                    android:id="@+id/show_gift_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray60"
                    android:textSize="@dimen/default_textsize_13" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/default_padding_view_edge"
            android:layout_marginRight="@dimen/default_padding_view_edge"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/show_gift_pic_iv"
                android:layout_width="90dip"
                android:layout_height="90dip"
                android:src="@drawable/main_img_defaultpic_small" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/default_padding_view_edge"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rank_img_orange1"
                        android:padding="2dp"
                        android:text="@string/integral"
                        android:textColor="@color/white"
                        android:textSize="@dimen/default_textsize_11" />

                    <TextView
                        android:id="@+id/show_gift_integral"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rank_img_orange2"
                        android:padding="2dp"
                        android:textColor="@color/orange2"
                        android:textSize="@dimen/default_textsize_11" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/default_padding_view_edge"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rank_img_purple1"
                        android:padding="2dp"
                        android:text="@string/glamour"
                        android:textColor="@color/white"
                        android:textSize="@dimen/default_textsize_11" />

                    <TextView
                        android:id="@+id/show_gift_glamour"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rank_img_purple2"
                        android:padding="2dp"
                        android:textColor="@color/orange2"
                        android:textSize="@dimen/default_textsize_11" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/default_padding_view_edge"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rank_img_green1"
                        android:padding="2dp"
                        android:text="@string/loyalty"
                        android:textColor="@color/white"
                        android:textSize="@dimen/default_textsize_11" />

                    <TextView
                        android:id="@+id/show_gift_loyalty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rank_img_green2"
                        android:padding="2dp"
                        android:textColor="@color/orange2"
                        android:textSize="@dimen/default_textsize_11" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/show_gift_change"
            android:layout_width="match_parent"
            android:layout_height="@dimen/default_height_title_tabhost"
            android:layout_margin="@dimen/default_padding_view_edge"
            android:background="@drawable/main_btn_big_selector"
            android:text="@string/integral_change"
            android:textColor="@color/peach" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/show_gift_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@drawable/gift_btn_close" />

</RelativeLayout>