<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/click_list_selector_new"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="@dimen/default_padding_view_edge" >

    <RelativeLayout
        android:layout_width="@dimen/default_height_head_chat"
        android:layout_height="@dimen/default_height_head_chat" >

        <ImageView
            android:id="@+id/item_rank_queen_iv_head"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/main_img_defaulthead_pr" />

        <ImageView
            android:id="@+id/item_broadcast_head_identify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/homepage_icon_identifed"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/item_rank_queen_iv_flag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/rank_img_girl1"
            android:visibility="gone" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/default_padding_view_edge"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/item_rank_queen_tv_rank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rank_img_number"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="@dimen/default_textsize_11" />

            <TextView
                android:id="@+id/item_rank_queen_tv_nick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:ellipsize="end"
                android:maxWidth="100dip"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/default_textsize_15" />

            <ImageView
                android:id="@+id/iv_rank_head_gradeinfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/default_padding_gridview_edge" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="1dip" >

            <TextView
                android:id="@+id/item_rank_queen_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="5dp"
                android:text="本日新增"
                android:textColor="@color/gray"
                android:textSize="@dimen/default_textsize_11" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <LinearLayout
                    android:id="@+id/ll_rank_gold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone" >

                    <TextView
                        android:id="@+id/tv_gold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rank_img_orange1"
                        android:padding="2dp"
                        android:text="财富值"
                        android:textColor="@color/white"
                        android:textSize="@dimen/default_textsize_11" />

                    <TextView
                        android:id="@+id/tv_rank_gold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rank_img_orange2"
                        android:gravity="center"
                        android:minWidth="@dimen/default_padding_queen_bottom"
                        android:padding="2dp"
                        android:text="0"
                        android:textColor="@color/orange2"
                        android:textSize="@dimen/default_textsize_11" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_rank_glamour"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="1dip" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rank_img_purple1"
                        android:padding="2dp"
                        android:text="@string/glamour"
                        android:textColor="@color/white"
                        android:textSize="@dimen/default_textsize_11" />

                    <TextView
                        android:id="@+id/tv_rank_glamour"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rank_img_purple2"
                        android:gravity="center"
                        android:minWidth="@dimen/default_padding_queen_bottom"
                        android:padding="2dp"
                        android:text="0"
                        android:textColor="@color/purple"
                        android:textSize="@dimen/default_textsize_11" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>