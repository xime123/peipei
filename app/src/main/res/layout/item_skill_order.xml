<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/my_task_list1_bg"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/item_skill_order_iv_head"
            android:layout_width="@dimen/default_height_head_chat"
            android:layout_height="@dimen/default_height_head_chat"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/default_padding_view_edge"
            android:src="@drawable/main_img_defaulthead_pr" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_padding_view_edge"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/item_skill_order_type"
                    android:layout_width="@dimen/default_height_gift_edit"
                    android:layout_height="18dp"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/default_textsize_13" />

                <TextView
                    android:id="@+id/item_skill_order_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/default_textsize_15" />
            </LinearLayout>

            <TextView
                android:id="@+id/item_skill_order_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_padding_gridview_edge"
                android:textColor="@color/gray60"
                android:textSize="@dimen/default_textsize_13" />

            <TextView
                android:id="@+id/item_skill_order_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_padding_image_text_small"
                android:textColor="@color/gray"
                android:textSize="@dimen/default_textsize_13" />
        </LinearLayout>

        <ImageView
            android:id="@+id/item_skill_order_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/person_img_order_list_confirming" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/main_line" />

</LinearLayout>