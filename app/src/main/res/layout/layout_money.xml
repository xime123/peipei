<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_money"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rank_img_orange1"
        android:padding="2dp"
        android:text="@string/gold_money"
        android:textColor="@color/white"
        android:textSize="@dimen/default_textsize_11" />

    <TextView
        android:id="@+id/tv_gold_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rank_img_orange2"
        android:gravity="center"
        android:minWidth="@dimen/default_padding_queen_bottom"
        android:padding="2dp"
        android:text="0"
        android:textColor="@color/orange2"
        android:textSize="@dimen/default_textsize_11" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/default_padding_gridview_edge"
        android:background="@drawable/rank_img_grey1"
        android:padding="2dp"
        android:text="@string/silver_money"
        android:textColor="@color/white"
        android:textSize="@dimen/default_textsize_11" />

    <TextView
        android:id="@+id/tv_silver_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rank_img_grey2"
        android:gravity="center"
        android:minWidth="@dimen/default_padding_queen_bottom"
        android:padding="2dp"
        android:text="0"
        android:textColor="@color/gray"
        android:textSize="@dimen/default_textsize_11" />

</LinearLayout>