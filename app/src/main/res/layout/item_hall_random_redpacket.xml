<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="10dp" >

    <LinearLayout
        style="@style/FullWdithStyle"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_head"
            android:layout_width="@dimen/default_height_head_chat"
            android:layout_height="@dimen/default_height_head_chat"
            android:layout_gravity="center_vertical"
            android:contentDescription="@null"
            android:src="@drawable/main_img_defaulthead_pr" />

        <LinearLayout
            style="@style/FullWdithStyle"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_nick"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/dialog_title" />

                <TextView
                    android:id="@+id/tv_time"
                    style="@style/WrapContentStyle"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/aipay_grey_light"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                style="@style/WrapContentStyle"
                android:gravity="right"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/dialog_title" />

                <TextView
                    android:id="@+id/tv_no1"
                    style="@style/WrapContentStyle"
                    android:layout_marginTop="5dp"
                    android:drawableLeft="@drawable/hall_redpacket_no1_icon"
                    android:drawablePadding="5dp"
                    android:text="@string/str_luck_no1"
                    android:textColor="@color/default_redpacket_no1"
                    android:textSize="13sp"
                    android:visibility="invisible" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        style="@style/FullWdithStyle"
        android:background="@drawable/hall_redpacket_devider_line"
        android:contentDescription="@null" />

</LinearLayout>