<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg_pink"
    android:orientation="vertical" >

    <include layout="@layout/title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/default_padding_view_edge"
            android:layout_marginRight="@dimen/default_padding_view_edge"
            android:layout_marginTop="@dimen/default_padding_between_view"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/setting_userinfo_tv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/default_height_title"
                android:background="@drawable/main_img_list1_selector"
                android:drawableRight="@drawable/main_img_listarrow"
                android:gravity="center_vertical"
                android:padding="@dimen/default_padding_view_edge"
                android:text="@string/setting_userinfo"
                android:textColor="@color/black"
                android:textSize="@dimen/default_textsize_15" />

            <TextView
                android:id="@+id/setting_message_tv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/default_height_title"
                android:layout_marginBottom="@dimen/default_padding_view_edge"
                android:background="@drawable/main_img_list3_selector"
                android:drawableRight="@drawable/main_img_listarrow"
                android:gravity="center_vertical"
                android:padding="@dimen/default_padding_view_edge"
                android:text="@string/setting_message"
                android:textColor="@color/black"
                android:textSize="@dimen/default_textsize_15" />

            <TextView
                android:id="@+id/setting_help_tv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/default_height_title"
                android:background="@drawable/main_img_list1_selector"
                android:drawableRight="@drawable/main_img_listarrow"
                android:gravity="center_vertical"
                android:padding="@dimen/default_padding_view_edge"
                android:text="@string/setting_help"
                android:textColor="@color/black"
                android:textSize="@dimen/default_textsize_15" />

            <TextView
                android:id="@+id/setting_feedback_tv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/default_height_title"
                android:background="@drawable/main_img_list2_selector"
                android:drawableRight="@drawable/main_img_listarrow"
                android:gravity="center_vertical"
                android:padding="@dimen/default_padding_view_edge"
                android:text="@string/setting_feedback"
                android:textColor="@color/black"
                android:textSize="@dimen/default_textsize_15" />

            <TextView
                android:id="@+id/setting_local_img_tv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/default_height_title"
                android:background="@drawable/main_img_list2_selector"
                android:drawableRight="@drawable/main_img_listarrow"
                android:gravity="center_vertical"
                android:padding="@dimen/default_padding_view_edge"
                android:text="清理本地图片"
                android:textColor="@color/black"
                android:textSize="@dimen/default_textsize_15" />

            <TextView
                android:id="@+id/setting_memory_tv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/default_height_title"
                android:background="@drawable/main_img_list2_selector"
                android:drawableRight="@drawable/main_img_listarrow"
                android:gravity="center_vertical"
                android:padding="@dimen/default_padding_view_edge"
                android:text="清理缓存"
                android:textColor="@color/black"
                android:textSize="@dimen/default_textsize_15" />

            <TextView
                android:id="@+id/setting_about_tv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/default_height_title"
                android:background="@drawable/main_img_list3_selector"
                android:drawableRight="@drawable/main_img_listarrow"
                android:gravity="center_vertical"
                android:padding="@dimen/default_padding_view_edge"
                android:text="@string/setting_about"
                android:textColor="@color/black"
                android:textSize="@dimen/default_textsize_15" />

            <TextView
                android:id="@+id/setting_tv_exit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/default_height_title"
                android:layout_marginTop="@dimen/default_padding_view_edge"
                android:background="@drawable/main_btn_logout_selector"
                android:gravity="center"
                android:padding="@dimen/default_padding_view_edge"
                android:text="@string/setting_exit"
                android:textColor="@color/white"
                android:textSize="@dimen/default_textsize_15" />

            <View
                android:layout_width="match_parent"
                android:layout_height="300dip" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>