<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_image_broadcast_text_color"
    android:layout_width="match_parent"
    android:layout_height="@dimen/default_height_title_tabhost"
    android:background="@drawable/main_bar_menu_un"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:visibility="gone" >

    <View
        android:layout_width="0dip"
        android:layout_height="1dip"
        android:layout_weight="1" />

    <ImageView
        android:id="@+id/iv_broadcast_textcolor_black"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingLeft="18dip"
        android:paddingRight="18dip"
        android:scaleType="fitCenter"
        android:src="@drawable/broadcast_textcolor_black" />

    <ImageView
        android:id="@+id/iv_broadcast_textcolor_red"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingLeft="18dip"
        android:paddingRight="18dip"
        android:scaleType="fitCenter"
        android:src="@drawable/broadcast_textcolor_red" />

    <ImageView
        android:id="@+id/iv_broadcast_textcolor_purple"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingLeft="18dip"
        android:paddingRight="18dip"
        android:scaleType="fitCenter"
        android:src="@drawable/broadcast_textcolor_purple" />

    <ImageView
        android:id="@+id/iv_broadcast_textcolor_blue"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingLeft="18dip"
        android:paddingRight="18dip"
        android:scaleType="fitCenter"
        android:src="@drawable/broadcast_textcolor_blue" />

    <View
        android:layout_width="0dip"
        android:layout_height="1dip"
        android:layout_weight="1" />

</LinearLayout>