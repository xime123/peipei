<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/chat_item_redpack_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/default_padding_view_edge"
    android:paddingLeft="@dimen/default_padding_view_edge"
    android:paddingRight="@dimen/default_padding_view_edge"
    android:paddingTop="@dimen/default_padding_view_edge" >

    <include layout="@layout/item_chat_left_head" />

    <RelativeLayout
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingLeft="@dimen/default_padding_image_text_small"
        android:paddingRight="@dimen/default_padding_image_text_small" >

        <LinearLayout
            android:id="@+id/ll_chat_left_text_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:orientation="vertical"
            android:visibility="visible" >

            <TextView
                android:id="@+id/chat_item_nick_redpack_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|top"
                android:layout_marginBottom="3dip"
                android:layout_marginLeft="7dip"
                android:gravity="left|top"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/chat_item_redpack_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/chat_item_left"
                android:orientation="vertical"
                android:paddingBottom="14dip"
                android:paddingLeft="17dip"
                android:paddingRight="17dip"
                android:paddingTop="14dip" >

                <TextView
                    android:id="@+id/chat_item_redpack_left_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="@string/str_harm_redpacket"
                    android:textColor="@color/black"
                    android:textSize="@dimen/default_textsize_16" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingTop="8dip" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/message_icon_packet" />

                    <TextView
                        android:id="@+id/tv_redpacket_content_left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dip"
                        android:gravity="center_vertical"
                        android:lineSpacingExtra="5dip"
                        android:text="@string/str_harm_redpacket_content"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/default_textsize_13" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/chat_item_time_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_marginTop="@dimen/default_padding_image_text_small"
                android:background="@drawable/chat_item_time_bg"
                android:paddingLeft="5dip"
                android:paddingRight="5dip"
                android:textColor="@color/white"
                android:textSize="@dimen/default_textsize_10" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_chat_right_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:orientation="horizontal" >

            <View
                android:layout_width="0dip"
                android:layout_height="1dip"
                android:layout_weight="1" />

            <include layout="@layout/item_chat_right_send_progress" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/chat_item_nick_redpack_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|top"
                    android:layout_marginBottom="3dip"
                    android:layout_marginRight="7dip"
                    android:gravity="right|top"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/chat_item_redpack_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/chat_item_right"
                    android:orientation="vertical"
                    android:paddingBottom="14dip"
                    android:paddingLeft="17dip"
                    android:paddingRight="17dip"
                    android:paddingTop="14dip" >

                    <TextView
                        android:id="@+id/chat_item_redpack_right_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="@string/str_harm_redpacket"
                        android:textColor="@color/black"
                        android:textSize="@dimen/default_textsize_16" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingTop="8dip" >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/message_icon_packet" />

                        <TextView
                            android:id="@+id/tv_redpacket_content_right"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dip"
                            android:gravity="center_vertical"
                            android:lineSpacingExtra="5dip"
                            android:text="@string/str_harm_redpacket_content"
                            android:textColor="@color/black"
                            android:textSize="@dimen/default_textsize_13" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/default_padding_gridview_edge"
                        android:layout_marginTop="@dimen/default_padding_view_edge"
                        android:scaleType="fitXY"
                        android:src="@drawable/main_line" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/tv_redpacket_content_right_detail"
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/str_redpacket_detail"
                            android:textColor="@color/black"
                            android:textSize="@dimen/default_textsize_13" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/main_img_listarrow" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/chat_item_time_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="10dip"
                    android:layout_marginTop="@dimen/default_padding_image_text_small"
                    android:background="@drawable/chat_item_time_bg"
                    android:paddingLeft="5dip"
                    android:paddingRight="5dip"
                    android:textColor="@color/white"
                    android:textSize="@dimen/default_textsize_10" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <include layout="@layout/item_chat_right_head" />

</LinearLayout>