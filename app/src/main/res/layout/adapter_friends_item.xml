<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/click_list_selector_new"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/default_padding_view_edge"
    android:paddingLeft="@dimen/default_padding_view_edge"
    android:paddingRight="@dimen/default_padding_view_edge"
    android:paddingTop="@dimen/default_padding_view_edge" >

    <RelativeLayout
        android:layout_width="@dimen/default_height_menu"
        android:layout_height="@dimen/default_height_menu" >

        <ImageView
            android:id="@+id/item_head"
            android:layout_width="@dimen/default_height_menu"
            android:layout_height="@dimen/default_height_menu"
            android:src="@drawable/main_img_defaulthead_pr" />

        <ImageView
            android:id="@+id/item_head_identity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/homepage_icon_identifed"
            android:visibility="invisible" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/default_padding_view_edge"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxWidth="100dip"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/default_textsize_16" />
            
            <ImageView
                android:id="@+id/iv_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/default_padding_image_text_small"
                android:scaleType="centerCrop"
                android:contentDescription="@null" />

            <View
                android:layout_width="0dip"
                android:layout_height="1dip"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/iv_online_flag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"
                android:src="@drawable/main_icon_online_yes" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/default_padding_image_text_small"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/gray"
                android:textSize="@dimen/default_textsize_13" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_distance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/default_padding_gridview_edge"
            android:layout_marginTop="@dimen/default_padding_gridview_edge"
            android:gravity="center_vertical"
            android:orientation="horizontal" >
            
            <ImageView
                android:id="@+id/iv_item_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@null" />

            <TextView
                android:id="@+id/tv_age"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/default_padding_gridview_edge"
                android:layout_weight="1"
                android:singleLine="true"
                android:textColor="@color/gray"
                android:textSize="@dimen/default_textsize_14" />

            <TextView
                android:id="@+id/tv_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/makefriend_kilometer_women"
                android:paddingLeft="@dimen/default_padding_gridview_edge"
                android:paddingRight="@dimen/default_padding_gridview_edge"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="@dimen/default_textsize_11" />
        </LinearLayout>
        
        <LinearLayout 
            android:id="@+id/ll_skill"
            style="@style/FullWdithStyle">
            
        </LinearLayout>
    </LinearLayout>

</LinearLayout>