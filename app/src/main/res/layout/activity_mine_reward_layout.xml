<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/aipay_white_light"
    android:orientation="vertical" >

    <include layout="@layout/title" />

    <LinearLayout
        android:id="@+id/publish_reward_tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/join_reward_layout"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/join_reward_title_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawableBottom="@color/red"
                android:gravity="center"
                android:padding="10dip"
                android:text="参加悬赏"
                android:textColor="@color/red"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/join_reward_line_tv"
                android:layout_width="match_parent"
                android:layout_height="2dip"
                android:background="@color/red" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/publish_reward_layout"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/publish_reward_title_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawableBottom="@color/red"
                android:gravity="center"
                android:padding="10dip"
                android:text="发布悬赏"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/publish_reward_line_tv"
                android:layout_width="match_parent"
                android:layout_height="2dip"
                android:background="@color/red"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/win_reward_title_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawableBottom="@color/red"
                android:gravity="center"
                android:padding="10dip"
                android:text="赢得悬赏"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/win_reward_line_tv"
                android:layout_width="match_parent"
                android:layout_height="2dip"
                android:background="@color/red"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/pulish_reward_line"
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="@color/line_color" />

    <android.support.v4.view.ViewPager
        android:id="@+id/mine_reward_viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never" />

</LinearLayout>