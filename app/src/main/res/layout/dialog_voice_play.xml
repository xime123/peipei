<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/pop_bg_white"
    android:orientation="vertical"
    android:padding="@dimen/default_padding_view_text" >

    <ScrollView
        android:id="@+id/ScrollView"
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:minHeight="80dip"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_chat_voice_head_type"
                android:layout_width="@dimen/default_height_title_tabhost"
                android:layout_height="@dimen/default_height_title_tabhost"
                android:src="@drawable/main_img_defaulthead_un" />

            <LinearLayout
                android:id="@+id/chat_item_left_voice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="3dp"
                android:background="@drawable/message_img_bubblebg_orange"
                android:gravity="center"
                android:minWidth="80dip"
                android:paddingBottom="7dip"
                android:paddingLeft="@dimen/default_padding_view_edge"
                android:paddingRight="@dimen/default_padding_view_edge"
                android:paddingTop="7dip" >

                <TextView
                    android:id="@+id/chat_item_left_voice_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/default_padding_view_edge"
                    android:layout_marginRight="@dimen/default_padding_view_text"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/default_textsize_13" />

                <ImageButton
                    android:id="@+id/chat_item_left_voice_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/default_padding_view_edge"
                    android:background="@drawable/message_img_voice3_white"
                    android:contentDescription="@string/app_name" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/default_padding_view_edge"
        android:paddingTop="@dimen/default_padding_view_edge" >

        <Button
            android:id="@+id/btn_grade_ok"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/default_padding_view_edge"
            android:layout_marginRight="@dimen/default_padding_view_edge"
            android:background="@drawable/main_btn_big_selector"
            android:text="@string/close"
            android:textColor="@color/peach"
            android:textSize="@dimen/default_textsize_15" />
    </RelativeLayout>

</LinearLayout>