<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg_pink"
    android:orientation="vertical" >
    
    <include layout="@layout/title"/>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/dynamic_ma_all_tv"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/rb_rank_selector"
            android:gravity="center"
            android:text="@string/all_dynamic2"
            android:textColor="@drawable/rb_rank_textcolor_selector"
            android:textSize="@dimen/default_textsize_13" />

        <TextView
            android:id="@+id/dynamic_ma_me_tv"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/rb_rank_selector"
            android:gravity="center"
            android:text="@string/my_dynamic"
            android:textColor="@drawable/rb_rank_textcolor_selector"
            android:textSize="@dimen/default_textsize_13" />

        <LinearLayout
            android:id="@+id/dynamic_ma_about_me_layout"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/rb_rank_selector"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/dynamic_ma_about_me_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/about_me"
                android:textColor="@drawable/rb_rank_textcolor_selector"
                android:textSize="@dimen/default_textsize_13" />

            <ImageView
                android:id="@+id/dynamic_ma_about_me_tip_number_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dip"
                android:background="@drawable/message_img_redot0"
                android:visibility="invisible" />
        </LinearLayout>
    </LinearLayout>
    
    <android.support.v4.view.ViewPager
        android:id="@+id/dynamic_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never" />

</LinearLayout>
