<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg_pink"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_height_head_chat2"
        android:background="@drawable/main_bar_nav_un" >

        <ProgressBar
            android:id="@+id/pg_receive_offline_message"
            android:layout_width="24dip"
            android:layout_height="24dip"
            android:layout_centerVertical="true"
            android:indeterminateDrawable="@drawable/progress_load_offline_message"
            android:paddingLeft="@dimen/default_padding_view_edge"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/default_padding_gridview_edge"
            android:paddingTop="@dimen/default_padding_gridview_edge" >

            <View
                android:layout_width="0dip"
                android:layout_height="1dip"
                android:layout_weight="1" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/default_height_change_table"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/tv_messge"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingLeft="@dimen/default_padding_gridview_edge"
                    android:paddingRight="@dimen/default_padding_gridview_edge"
                    android:text="@string/message"
                    android:textColor="@color/peach"
                    android:textSize="@dimen/default_textsize_14" />

                <ImageView
                    android:id="@+id/tv_message_new"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/message_img_redot0" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/default_height_change_table"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/tv_friends"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/str_friends"
                    android:textColor="@color/peach"
                    android:paddingLeft="@dimen/default_padding_gridview_edge"
                    android:paddingRight="@dimen/default_padding_gridview_edge"
                    android:textSize="@dimen/default_textsize_14" />

                <ImageView
                    android:id="@+id/tv_friends_new"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/message_img_redot0" />
            </RelativeLayout>

            <View
                android:layout_width="0dip"
                android:layout_height="1dip"
                android:layout_weight="1" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_message"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:paddingLeft="@dimen/default_padding_view_edge"
            android:paddingRight="@dimen/default_padding_view_edge"
            android:scaleType="fitCenter"
            android:src="@drawable/message_icon_more_un" />
    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/message_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never" />

</LinearLayout>