<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/tv_skill_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="你选择的技能："
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/reward_skill_comfir_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:gravity="center"
            android:text="你点我唱"
            android:textColor="@color/dialog_confirm"
            android:textSize="16sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/reward_skill_desc_comfir_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:gravity="center"
        android:text="参与者要语音唱悬赏功能点歌"
        android:textColor="@color/main_broadcast_item_text_color"
        android:textSize="16sp" />

</LinearLayout>