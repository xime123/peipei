<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/main_bg_pink"
    android:orientation="vertical" >

    <include layout="@layout/title" />

    <com.tshang.peipei.view.PullToRefreshHeaderGridView
        android:id="@+id/pgv_group_member"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/default_padding_gridview_edge"
        android:layout_weight="1"
        android:cacheColorHint="@null"
        android:fadingEdge="none"
        android:horizontalSpacing="@dimen/default_padding_image_text_small"
        android:listSelector="#00000000"
        android:numColumns="3"
        android:overScrollMode="never"
        android:stretchMode="columnWidth"
        android:verticalSpacing="@dimen/default_padding_image_text_small" />

    <RelativeLayout
        android:id="@+id/ll_select_group_member"
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_height_title_tabhost"
        android:background="@drawable/main_bar_nav_selector" >

        <TextView
            android:id="@+id/tv_select_group_member"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/default_padding_view_edge"
            android:background="@drawable/click_kicked_out_harem_selector"
            android:gravity="center"
            android:paddingLeft="@dimen/default_padding_view_edge"
            android:paddingRight="@dimen/default_padding_view_edge"
            android:text="@string/str_turn_over_the_brand"
            android:textColor="@color/white"
            android:textSize="@dimen/default_textsize_15" />
    </RelativeLayout>

</LinearLayout>