<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:background="@color/black_transparent"
    android:orientation="horizontal"
    android:visibility="visible" >

    <ImageView
        android:id="@+id/iv_show_baohe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@anim/show_openbox"
        android:contentDescription="@string/app_name"/>

    <RelativeLayout
        android:id="@+id/layout_show_baohe_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/show_openbox_result"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/iv_show_baohe_result"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_centerInParent="true"/>
        
        <TextView android:id="@+id/tv_show_baohe_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/default_textsize_15"
            android:textColor="@color/show_openbox_content_color"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="170dp"
            android:text="测试"/>
    </RelativeLayout>

</LinearLayout>