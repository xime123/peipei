<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/message_receivepacket_tips_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="@dimen/default_padding_view_text" >

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/str_congratulations_to_you"
        android:textColor="@color/red_packet_dialog_text_color"
        android:textSize="@dimen/default_textsize_15" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_get_redpacket_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dip"
            android:gravity="center_horizontal"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="@dimen/default_textsize_16"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dip"
            android:gravity="center_horizontal"
            android:text="@string/gold_money"
            android:textColor="#ae1507"
            android:textSize="@dimen/default_textsize_14" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:gravity="center_horizontal"
        android:text="@string/str_check_account"
        android:textColor="#ae1507"
        android:textSize="@dimen/default_textsize_14" />

</LinearLayout>