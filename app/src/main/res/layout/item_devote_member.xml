<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/click_list_selector_new"
    android:gravity="center_vertical"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dp" >

        <ImageView
            android:id="@+id/item_devote_member_head"
            android:layout_width="@dimen/default_height_head_chat"
            android:layout_height="@dimen/default_height_head_chat"
            android:background="@drawable/main_img_defaulthead_selector" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/default_padding_gridview_edge"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal" 
                android:layout_marginBottom="3dp">

                <ImageView
                    android:id="@+id/item_devote_member_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/broadcast_img_boy" />

                <TextView
                    android:id="@+id/item_devote_member_nick"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/default_textsize_15" />

                <ImageView
                    android:id="@+id/item_devote_member_vip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/default_padding_gridview_edge" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/item_devote_member_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="5dp"
                    android:text="@string/str_show_devote_day_1"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/default_textsize_11" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rank_img_orange1"
                    android:padding="2dp"
                    android:text="@string/str_riches_num"
                    android:textColor="@color/white"
                    android:textSize="@dimen/default_textsize_11" />

                <TextView
                    android:id="@+id/item_devote_member_gold_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rank_img_orange2"
                    android:gravity="center"
                    android:minWidth="@dimen/default_padding_queen_bottom"
                    android:padding="2dp"
                    android:text="0"
                    android:textColor="@color/orange2"
                    android:textSize="@dimen/default_textsize_11" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dip"
        android:scaleType="fitXY"
        android:src="@drawable/main_line" />

</LinearLayout>