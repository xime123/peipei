<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/pop_bg_white"
    android:orientation="vertical" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/default_padding_view_edge"
        android:layout_marginTop="@dimen/default_padding_view_text"
        android:text="@string/setting_chat"
        android:textColor="@color/black"
        android:textSize="@dimen/default_textsize_16" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/default_padding_view_edge"
        android:layout_marginTop="@dimen/default_padding_gridview_edge"
        android:text="@string/str_need_gift_to_chat"
        android:textColor="@color/gray"
        android:textSize="@dimen/default_textsize_13" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_padding_view_text"
        android:scaleType="fitXY"
        android:src="@drawable/main_line" />

    <ListView
        android:id="@+id/lv_select_silver_gift"
        android:layout_width="match_parent"
        android:layout_height="252dip"
        android:cacheColorHint="@null"
        android:divider="@drawable/main_line"
        android:fadingEdge="none"
        android:listSelector="@drawable/click_selector_peach"
        android:overScrollMode="never"
        android:scrollbars="none" >
    </ListView>

</LinearLayout>