<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/default_padding_gridview_edge"
    android:paddingLeft="@dimen/default_padding_view_text"
    android:paddingRight="@dimen/default_padding_view_text"
    android:paddingTop="@dimen/default_padding_gridview_edge" >

    <ImageView
        android:id="@+id/iv_harem_group_member_head_item"
        android:layout_width="@dimen/default_height_head_chat"
        android:layout_height="@dimen/default_height_head_chat"
        android:src="@drawable/main_img_defaulthead_pr" />

    <TextView
        android:id="@+id/tv_harem_group_member_name_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_padding_gridview_edge"
        android:ellipsize="end"
        android:maxWidth="140dip"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textSize="@dimen/default_textsize_15" />

    <ImageView
        android:id="@+id/iv_harem_group_member_level_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop" />

    <View
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/tv_harem_group_member_operate_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/click_kicked_out_harem_selector"
        android:gravity="center"
        android:padding="@dimen/default_padding_gridview_edge"
        android:textColor="@color/peach"
        android:textSize="@dimen/default_textsize_15" />

</LinearLayout>