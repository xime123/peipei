<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/pop_bg_white"
    android:orientation="vertical"
    android:padding="@dimen/default_padding_view_text" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:minHeight="89dip"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/user_balance"
                    android:textColor="@color/black"
                    android:textSize="@dimen/default_textsize_11" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/rank_img_orange1"
                    android:padding="@dimen/default_padding_image_text_small"
                    android:text="@string/gold_money"
                    android:textColor="@color/white"
                    android:textSize="@dimen/default_textsize_11" />

                <TextView
                    android:id="@+id/dialog_gift_gold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rank_img_orange2"
                    android:padding="@dimen/default_padding_image_text_small"
                    android:textColor="@color/orange2"
                    android:textSize="@dimen/default_textsize_11" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/rank_img_grey1"
                    android:padding="@dimen/default_padding_image_text_small"
                    android:text="@string/silver_money"
                    android:textColor="@color/white"
                    android:textSize="@dimen/default_textsize_11" />

                <TextView
                    android:id="@+id/dialog_gift_silver"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rank_img_grey2"
                    android:padding="@dimen/default_padding_image_text_small"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/default_textsize_11" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/default_padding_view_edge"
                android:layout_marginTop="@dimen/default_padding_view_text"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/dialog_gift_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/default_padding_view_edge" />

                <TextView
                    android:id="@+id/dialog_gift_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/default_textsize_13" />
            </LinearLayout>

            <Button
                android:id="@+id/dialog_gift_buy_button"
                android:layout_width="match_parent"
                android:layout_height="@dimen/default_height_title_tabhost"
                android:background="@drawable/main_btn_big_selector"
                android:text="@string/present"
                android:textColor="@color/peach"
                android:textSize="@dimen/default_textsize_15" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>