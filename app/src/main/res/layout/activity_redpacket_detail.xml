<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg_pink"
    android:orientation="vertical" >

    <include layout="@layout/title" />

    <com.tshang.peipei.vender.pulltoprefresh.library.PullToRefreshListView
        android:id="@+id/plv_redpacket_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/default_padding_view_edge"
        android:cacheColorHint="#00000000"
        android:divider="@drawable/main_line"
        android:fadingEdge="none"
        android:fastScrollEnabled="false"
        android:listSelector="@android:color/transparent"
        android:overScrollMode="never" >
    </com.tshang.peipei.vender.pulltoprefresh.library.PullToRefreshListView>

    <TextView
        android:id="@+id/tv_redpacket_empyt"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="@string/str_redpacket_no_deliver_data"
        android:textColor="@color/gray"
        android:textSize="@dimen/default_textsize_15"
        android:visibility="gone" />

</LinearLayout>