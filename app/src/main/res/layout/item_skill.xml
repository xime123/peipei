<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rl_skill_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:id="@+id/ll_skill_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="4dip"
            android:background="@color/skill_blue_color"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_item_skill_title"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingLeft="@dimen/default_padding_gridview_edge"
                android:paddingRight="@dimen/default_padding_gridview_edge"
                android:textColor="@color/white"
                android:textSize="@dimen/default_textsize_13" />

            <TextView
                android:id="@+id/tv_item_skill_join_people"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/main_bg_black30"
                android:gravity="center"
                android:paddingBottom="@dimen/default_padding_gridview_edge"
                android:paddingTop="@dimen/default_padding_gridview_edge"
                android:textColor="@color/white"
                android:textSize="@dimen/default_textsize_13" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_add_skill"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="4dip"
            android:background="@drawable/btn_addphoto_selector"
            android:visibility="gone" />
    </RelativeLayout>

    <RatingBar
        android:id="@+id/ratingbar"
        android:layout_width="wrap_content"
        android:layout_height="20dip"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/indicator_internal_padding"
        android:isIndicator="true"
        android:max="50"
        android:numStars="5"
        android:progressDrawable="@drawable/rating_bar_full"
        android:rating="5"
        android:stepSize="10" />

</LinearLayout>