<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:id="@+id/ll_broadcast_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="60dip"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/ll_broadcase_head_layout"
            android:layout_width="55dip"
            android:layout_height="55dip"
            android:layout_marginBottom="8dip"
            android:layout_marginLeft="@dimen/default_padding_view_edge"
            android:layout_marginTop="8dip" >

            <ImageView
                android:id="@+id/item_broadcast_head"
                android:layout_width="@dimen/default_height_head_chat"
                android:layout_height="@dimen/default_height_head_chat"
                android:layout_centerInParent="true" />

            <ImageView
                android:id="@+id/item_broadcast_head_deliver_gift_iv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:contentDescription="@null"
                android:scaleType="fitXY"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/item_broadcast_head_identify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="6dip"
                android:layout_marginRight="6dip"
                android:src="@drawable/homepage_icon_identifed"
                android:visibility="gone" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="8dip"
            android:layout_marginLeft="@dimen/default_padding_gridview_edge"
            android:layout_marginRight="@dimen/default_padding_view_text"
            android:layout_marginTop="8dip"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_broadcast_item_type_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxWidth="100dip"
                    android:singleLine="true"
                    android:textColor="@color/blue_color"
                    android:textSize="@dimen/default_textsize_14" />

                <ImageView
                    android:id="@+id/iv_broadcast_item_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/default_padding_gridview_edge"
                    android:src="@drawable/broadcast_img_boy"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/iv_broadcast_item_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/default_padding_image_text_small"
                    android:src="@drawable/broadcast_img_top"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/iv_broadcast_item_small_77_gift"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/default_padding_image_text_small"
                    android:scaleType="centerCrop" />

                <ImageView
                    android:id="@+id/iv_broadcast_item_privilege"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/default_padding_image_text_small"
                    android:scaleType="centerCrop"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/iv_broadcast_item_big_77_gift"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/default_padding_image_text_small"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/iv_broadcast_item_charge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/default_padding_image_text_small"
                    android:background="@drawable/homepage_firstchargr" />

                <TextView
                    android:id="@+id/tv_broadcast_item_type_time"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="right"
                    android:singleLine="true"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/default_textsize_12" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <LinearLayout
                    android:id="@+id/ll_broadcast_item_type_voice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ll_broadcast_voice_bg_selector"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:visibility="gone" >

                    <ImageView
                        android:id="@+id/iv_broadcast_item_voice_play"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="5dip"
                        android:paddingLeft="@dimen/default_padding_view_edge"
                        android:paddingTop="5dip"
                        android:src="@drawable/broadcast_voice_logo3" />

                    <View
                        android:layout_width="0dip"
                        android:layout_height="1dip"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/tv_broadcast_item_type_voice_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="@dimen/default_padding_view_edge"
                        android:textColor="@color/black"
                        android:textSize="@dimen/default_textsize_14" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_broadcast_item_voice_islisten"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/default_padding_view_edge"
                    android:layout_toRightOf="@+id/ll_broadcast_item_type_voice"
                    android:src="@drawable/message_img_redot0"
                    android:visibility="gone" />

                <ProgressBar
                    android:id="@+id/pb_load_voice"
                    style="@android:style/Widget.ProgressBar.Small.Inverse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/default_padding_view_edge"
                    android:layout_toRightOf="@+id/ll_broadcast_item_type_voice"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_broadcast_item_type_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:lineSpacingExtra="3dip"
                    android:textColor="@color/black"
                    android:textSize="@dimen/default_textsize_14" />

                <ImageView
                    android:id="@+id/iv_decree"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="@dimen/default_padding_view_edge"
                    android:layout_marginRight="@dimen/default_padding_view_edge"
                    android:scaleType="center" />

                <LinearLayout
                    android:id="@+id/ll_braodcast_item_solitaire"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/chat_item_redpacket_left"
                    android:orientation="vertical"
                    android:visibility="gone" >

                    <LinearLayout
                        style="@style/FullWdithStyle"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal" >

                        <ImageView
                            style="@style/WrapContentStyle"
                            android:contentDescription="@null"
                            android:src="@drawable/chat_item_redpacket_icon" />

                        <LinearLayout
                            style="@style/FullScreenStyle"
                            android:layout_marginLeft="10dp"
                            android:orientation="vertical" >

                            <TextView
                                style="@style/WrapContentStyle"
                                android:minWidth="130dp"
                                android:maxWidth="145dp"
                                android:singleLine="true"
                                android:ellipsize="end"
                                android:text="@string/str_solitaire_redpacket"
                                android:textColor="@color/white"
                                android:textSize="@dimen/default_textsize_13" />

                            <TextView
                                android:id="@+id/tv_broadcast_redpacket_money"
                                style="@style/WrapContentStyle"
                                android:textColor="@color/white"
                                android:textSize="@dimen/default_textsize_9" />
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_broadcast_jion_person"
                        style="@style/FullScreenStyle"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/chat_item_redpacket_person_bg"
                        android:gravity="right|center_vertical"
                        android:paddingBottom="5dp"
                        android:paddingRight="15dp"
                        android:paddingTop="5dp"
                        android:textColor="@color/default_join_person_color"
                        android:textSize="@dimen/default_textsize_9" />
                </LinearLayout>

                <FrameLayout
                    android:id="@+id/ll_braodcast_item_redpacket"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/hall_item_redpacket_left"
                        android:orientation="vertical" >

                        <LinearLayout
                            style="@style/FullWdithStyle"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal" >

                            <ImageView
                                style="@style/WrapContentStyle"
                                android:contentDescription="@null"
                                android:src="@drawable/hall_item_redpacket_icon" />

                            <LinearLayout
                                style="@style/FullScreenStyle"
                                android:layout_marginLeft="10dp"
                                android:orientation="vertical" >

                                <TextView
                                    android:id="@+id/tv_hall_desc"
                                    style="@style/WrapContentStyle"
                                    android:maxWidth="145dp"
                                    android:minWidth="135dp"
                                    android:singleLine="true"
                                    android:ellipsize="end"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/default_textsize_13" />

                                <TextView
                                    style="@style/WrapContentStyle"
                                    android:layout_marginTop="5dp"
                                    android:text="@string/str_click_get_redpacket"
                                    android:textColor="@color/default_click_get_redpacket"
                                    android:textSize="@dimen/default_textsize_9" />
                            </LinearLayout>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_hall_redpacket_type"
                            style="@style/FullScreenStyle"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/chat_item_redpacket_person_bg"
                            android:gravity="right|center_vertical"
                            android:paddingBottom="5dp"
                            android:paddingRight="15dp"
                            android:paddingTop="5dp"
                            android:textColor="@color/default_join_person_color"
                            android:textSize="@dimen/default_textsize_9" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/iv_official"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:contentDescription="@null"
                        android:src="@drawable/hall_recpacket_official_icon"
                        android:visibility="gone" />
                </FrameLayout>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_braodcast_bottom_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingBottom="1dip"
        android:paddingTop="1dip"
        android:scaleType="fitXY"
        android:src="@drawable/main_line" />

</RelativeLayout>