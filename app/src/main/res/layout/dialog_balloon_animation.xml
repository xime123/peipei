<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <FrameLayout
        android:id="@+id/fl_balloon"
        style="@style/WrapContentStyle"
        android:layout_gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/iv_balloon_large"
            style="@style/WrapContentStyle"
            android:layout_gravity="center"
            android:contentDescription="@null"
            android:src="@drawable/broadcast_magic_balloon_large" />

        <LinearLayout
            style="@style/WrapContentStyle"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="80dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_balloon_left_head"
                style="@style/WrapContentStyle"
                android:layout_gravity="center"
                android:background="@drawable/broadcast_magic_balloon_head"
                android:contentDescription="@null"
                android:padding="2dp" />

            <ImageView
                android:id="@+id/iv_balloon_right_head"
                style="@style/WrapContentStyle"
                android:layout_gravity="center"
                android:background="@drawable/broadcast_magic_balloon_head"
                android:contentDescription="@null"
                android:padding="2dp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_balloon_heart"
            style="@style/WrapContentStyle"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="100dp"
            android:contentDescription="@null"
            android:src="@drawable/broadcast_magic_balloon_heart" />
    </FrameLayout>

    <ImageView
        android:id="@+id/iv_balloon1"
        style="@style/WrapContentStyle"
        android:layout_gravity="left|bottom"
        android:layout_marginBottom="-50dp"
        android:contentDescription="@null"
        android:src="@drawable/broadcast_magic_balloon1" />

    <ImageView
        android:id="@+id/iv_balloon2"
        style="@style/WrapContentStyle"
        android:layout_gravity="right|bottom"
        android:layout_marginBottom="-60dp"
        android:contentDescription="@null"
        android:src="@drawable/broadcast_magic_balloon2" />

    <ImageView
        android:id="@+id/iv_balloon3"
        style="@style/WrapContentStyle"
        android:layout_gravity="right|bottom"
        android:layout_marginBottom="-50dp"
        android:contentDescription="@null"
        android:src="@drawable/broadcast_magic_balloon3" />

</FrameLayout>