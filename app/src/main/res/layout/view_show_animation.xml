<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rl_receiver_gift_first"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dip"
        android:visibility="gone" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="50dip" >

            <LinearLayout
                android:id="@+id/ll_bg_anim_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/casino_gif_gift_bg"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="25dip" >

                <TextView
                    android:id="@+id/tv_animation_name_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="16dip"
                    android:textColor="#c50144"
                    android:textSize="15sp" />

                <View
                    android:layout_width="0dip"
                    android:layout_height="1dip"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="16dip"
                    android:text="送"
                    android:textColor="#202020"
                    android:textSize="13sp" />

                <ImageView
                    android:id="@+id/iv_gift_one"
                    android:layout_width="45dip"
                    android:layout_height="45dip" />

                <TextView
                    android:id="@+id/tv_animtaion_one_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dip"
                    android:paddingTop="16dip"
                    android:textColor="#ff0000"
                    android:textSize="13sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/iv_animation_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/casino_gif_gift_master" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dip"
                android:src="@drawable/casino_gif_gift_even" />

            <ImageView
                android:id="@+id/iv_first_hundred"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/casino_gif_gift_even_2"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_first_ten"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/casino_gif_gift_even_7"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_first_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/casino_gif_gift_even_8" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_receiver_gift_second"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:visibility="gone" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="50dip" >

            <LinearLayout
                android:id="@+id/ll_bg_anim_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/casino_gif_gift_bg"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="25dip" >

                <TextView
                    android:id="@+id/tv_animation_two_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="16dip"
                    android:textColor="#c50144"
                    android:textSize="15sp" />

                <View
                    android:layout_width="0dip"
                    android:layout_height="1dip"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="16dip"
                    android:text="送"
                    android:textColor="#202020"
                    android:textSize="13sp" />

                <ImageView
                    android:id="@+id/iv_gift_two"
                    android:layout_width="45dip"
                    android:layout_height="45dip" />

                <TextView
                    android:id="@+id/tv_animation_two_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dip"
                    android:paddingTop="16dip"
                    android:textColor="#ff0000"
                    android:textSize="13sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/iv_animation_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/casino_gif_gift_master" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dip"
                android:src="@drawable/casino_gif_gift_even" />

            <ImageView
                android:id="@+id/iv_second_hundred"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/casino_gif_gift_even_2"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_second_ten"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/casino_gif_gift_even_7"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_second_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/casino_gif_gift_even_8" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>