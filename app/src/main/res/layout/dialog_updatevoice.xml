<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tc="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/default_padding_view_text"
    android:background="@drawable/popup_content_bg"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/dialog_update_title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/popup_title"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/default_textsize_16" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/dialog_lin_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical" >

            <com.tshang.peipei.view.TasksCompletedView
                android:id="@+id/task_voice_webview"
                android:layout_width="76dip"
                android:layout_height="76dip"
                android:background="@drawable/task_braodcast_voice_recording_selector"
                tc:circleColor="@color/white"
                tc:circleradius="32dip"
                tc:circlestrokeWidth="3dip"
                tc:ringColor="@color/ring_color" />

            <TextView
                android:id="@+id/tv_voice_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_padding_gridview_edge"
                android:text="@string/str_click_recording"
                android:textColor="@color/green"
                android:textSize="@dimen/default_textsize_12" />
        </LinearLayout>

        <ProgressBar
            android:id="@+id/task_voice_pb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:indeterminateDrawable="@drawable/voice_progress_download"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_voice_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/dialog_lin_update"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/default_padding_view_text"
            android:text="@string/str_click_recording"
            android:textColor="@color/black"
            android:textSize="@dimen/default_textsize_12"
            android:visibility="gone"/>

        <Button
            android:id="@+id/btn_rerecording"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dip"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="25dp"
            android:layout_toRightOf="@id/dialog_lin_update"
            android:background="@drawable/popup_music_voice_restart_selector"
            android:text="@string/str_rerecording"
            android:textSize="@dimen/default_textsize_14"
            android:visibility="gone" />
    </RelativeLayout>

    <Button
        android:id="@+id/ok_sure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/popup_btn_up_ids"
        android:paddingBottom="@dimen/default_padding_gridview_edge"
        android:paddingTop="@dimen/default_padding_gridview_edge"
        android:text="@string/upload"
        android:textColor="@color/white"
        android:textSize="@dimen/default_textsize_16" />

</LinearLayout>