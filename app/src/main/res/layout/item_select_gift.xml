<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/default_height_popuplist" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:minHeight="@dimen/default_height_popuplist"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_item_select_gift"
            android:layout_width="32dip"
            android:layout_height="32dip"
            android:layout_marginLeft="@dimen/default_padding_view_edge"
            android:background="@drawable/homepage_skill_number_bounced_p_bg"
            android:src="@drawable/main_img_defaultpic_small" />

        <TextView
            android:id="@+id/tv_item_select_gift_name"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/default_padding_view_edge"
            android:layout_weight="1"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/peach"
            android:textSize="@dimen/default_textsize_13" />

        <TextView
            android:id="@+id/tv_item_select_gift_describe"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/default_padding_view_edge"
            android:layout_weight="2"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/peach"
            android:textSize="@dimen/default_textsize_13" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:scaleType="fitXY"
        android:src="@drawable/main_line" />

</RelativeLayout>