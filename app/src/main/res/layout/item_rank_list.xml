<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/rank_main_ivw_frist"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/main_img_defaulthead_pr" />

    <TextView
        android:id="@+id/main_rank_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_padding_view_text"
        android:layout_toRightOf="@id/rank_main_ivw_frist"
        android:text="山大大帝"
        android:textColor="@color/black"
        android:textSize="@dimen/default_textsize_15" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/main_rank_tv"
        android:layout_margin="@dimen/default_padding_view_text"
        android:layout_toRightOf="@id/rank_main_ivw_frist"
        android:gravity="bottom"
        android:text="本周新增魅力值  11111"
        android:textColor="@color/black"
        android:textSize="@dimen/default_textsize_13" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/default_padding_view_edge"
        android:background="@drawable/main_img_listarrow" />

</RelativeLayout>