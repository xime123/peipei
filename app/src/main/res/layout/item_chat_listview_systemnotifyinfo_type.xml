<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="@dimen/default_padding_view_text"
    android:paddingRight="@dimen/default_padding_view_text"
    android:paddingTop="@dimen/default_padding_view_edge" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/message_img_bubblebg_white"
        android:orientation="vertical"
        android:padding="@dimen/default_padding_view_text" >

        <TextView
            android:id="@+id/tv_systemnotify_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/default_textsize_15" />

        <TextView
            android:id="@+id/tv_systemnotify_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_padding_view_edge"
            android:textColor="@color/new_skill_text_color"
            android:textSize="@dimen/default_textsize_13" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dip"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:layout_marginTop="15dip"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/ok_cancel"
                android:layout_width="0dp"
                android:layout_height="@dimen/default_height_head_chat"
                android:layout_marginRight="@dimen/default_padding_view_text"
                android:layout_weight="1"
                android:background="@drawable/main_btn_big_selector"
                android:gravity="center"
                android:text="@string/str_redpacket_detail"
                android:textColor="@color/peach"
                android:textSize="@dimen/default_textsize_14" />

            <Button
                android:id="@+id/ok_sure"
                android:layout_width="0dp"
                android:layout_height="@dimen/default_height_head_chat"
                android:layout_weight="1"
                android:background="@drawable/main_btn_big_selector"
                android:gravity="center"
                android:text="@string/share"
                android:textColor="@color/peach"
                android:textSize="@dimen/default_textsize_14" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>