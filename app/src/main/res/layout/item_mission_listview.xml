<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:minHeight="50dp"
    android:orientation="horizontal"
    android:padding="10dp" >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/item_mission_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/daily_checked"
            android:textColor="@color/black"
            android:textSize="@dimen/default_textsize_15" />

        <TextView
            android:id="@+id/item_mission_content_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/daily_checked"
            android:textColor="@color/gray"
            android:textSize="@dimen/default_textsize_13" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right|center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/item_mission_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:text="1/5"
            android:textColor="@color/orange"
            android:textSize="@dimen/default_textsize_13"
            android:visibility="gone" />

        <TextView
            android:id="@+id/item_mission_monkey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:textColor="@color/gray"
            android:textSize="@dimen/default_textsize_11" />

    </LinearLayout>

</LinearLayout>