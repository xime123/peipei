<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_emotion"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:visibility="gone" >

    <RelativeLayout
        android:id="@+id/rl_emoji_select"
        android:layout_width="match_parent"
        android:layout_height="195dip"
        android:background="@drawable/message_bg_white"
        android:gravity="center_vertical" >

        <android.support.v4.view.ViewPager
            android:id="@+id/emoji_viewpager"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fadingEdge="none"
            android:overScrollMode="never" />

        <com.tshang.peipei.view.PageControlView
            android:id="@+id/pageControlView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="18dip"
            android:gravity="center" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="36dip"
        android:background="#ecedf0"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_common_emotion"
            android:layout_width="60dip"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:src="@drawable/message_face_icon0" />

        <View
            android:layout_width="1sp"
            android:layout_height="match_parent"
            android:background="#d2d3da" />

        <ImageView
            android:id="@+id/iv_emoji_emotion"
            android:layout_width="60dip"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:src="@drawable/message_face_icon1" />

        <View
            android:layout_width="1sp"
            android:layout_height="match_parent"
            android:background="#d2d3da" />
    </LinearLayout>

</LinearLayout>