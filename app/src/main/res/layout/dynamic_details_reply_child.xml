<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="10dp" >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/main_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/dynamic_detail_reply_child_nick"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="test12"
            android:textColor="@color/peach"
            android:textSize="@dimen/default_textsize_14" />

        <TextView
            android:id="@+id/dynamic_detail_reply_child_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray"
            android:text="1分钟前"
            android:textSize="@dimen/default_textsize_12" />
    </LinearLayout>
    
    <TextView
        android:id="@+id/dynamic_detail_reply_child_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textColor="@color/black"
        android:text="哥就是不想认识你"
        android:textSize="@dimen/default_textsize_14" />

</LinearLayout>