<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg_pink"
    android:orientation="vertical" >

    <include layout="@layout/title" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/default_padding_view_edge"
        android:layout_marginRight="@dimen/default_padding_view_edge"
        android:layout_marginTop="@dimen/default_padding_between_view"
        android:background="@drawable/main_img_list1_selector"
        android:padding="@dimen/default_padding_view_edge" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginTop="5dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/reward_daily"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/reward_daily"
                android:textColor="@color/black"
                android:textSize="@dimen/default_textsize_15" />

            <TextView
                android:id="@+id/reward_daily_silver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/default_padding_between_view"
                android:text="@string/reward_daily_silver"
                android:textColor="@color/peach"
                android:textSize="@dimen/default_textsize_15" />
        </LinearLayout>

        <Button
            android:id="@+id/reward_daily_button"
            android:layout_width="72dp"
            android:layout_height="36dip"
            android:layout_alignParentRight="true"
            android:background="@drawable/message_btn_send_selector"
            android:text="@string/receive"
            android:textColor="@color/white"
            android:textSize="@dimen/default_textsize_15" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/default_padding_view_edge"
        android:layout_marginRight="@dimen/default_padding_view_edge"
        android:background="@drawable/main_img_list3_selector"
        android:padding="@dimen/default_padding_view_edge" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginTop="5dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/reward_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/reward_share"
                android:textColor="@color/black"
                android:textSize="@dimen/default_textsize_15" />

            <TextView
                android:id="@+id/reward_share_silver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/default_padding_between_view"
                android:text="@string/reward_daily_silver"
                android:textColor="@color/peach"
                android:textSize="@dimen/default_textsize_15" />
        </LinearLayout>

        <Button
            android:id="@+id/reward_share_button"
            android:layout_width="72dp"
            android:layout_height="36dip"
            android:layout_alignParentRight="true"
            android:background="@drawable/message_btn_send_selector"
            android:text="@string/receive"
            android:textColor="@color/white"
            android:textSize="@dimen/default_textsize_15" />
    </RelativeLayout>

</LinearLayout>