<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="5dp"
    android:orientation="horizontal" >

    <LinearLayout
        style="@style/FullWdithStyle"
        android:background="@drawable/adapter_solitaire_redpacket_list_item"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp" >

        <ImageView
            android:id="@+id/iv_head"
            android:layout_width="@dimen/default_height_head_chat"
            android:layout_height="@dimen/default_height_head_chat"
            android:contentDescription="@null"
            android:src="@drawable/main_img_defaulthead_pr" />

        <LinearLayout
            style="@style/FullWdithStyle"
            android:layout_marginLeft="5dp"
            android:orientation="vertical" >

            <LinearLayout
                style="@style/FullWdithStyle"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_nick"
                    style="@style/WrapContentStyle"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/space_black"
                    android:textSize="@dimen/default_textsize_13" />

                <ImageView
                    android:id="@+id/iv_level"
                    style="@style/WrapContentStyle"
                    android:layout_gravity="center_vertical"
                    android:contentDescription="@null" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/chat_item_solitaire_left"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/chat_item_redpacket_left"
                android:orientation="vertical" >

                <LinearLayout
                    style="@style/FullWdithStyle"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal" >

                    <ImageView
                        style="@style/WrapContentStyle"
                        android:contentDescription="@null"
                        android:src="@drawable/chat_item_redpacket_icon" />

                    <LinearLayout
                        style="@style/FullScreenStyle"
                        android:layout_marginLeft="10dp"
                        android:orientation="vertical" >

                        <TextView
                            style="@style/WrapContentStyle"
                            android:text="@string/str_solitaire_redpacket"
                            android:textColor="@color/white"
                            android:textSize="@dimen/default_textsize_13" />

                        <TextView
                            android:id="@+id/tv_redpacket_money"
                            style="@style/WrapContentStyle"
                            android:textColor="@color/white"
                            android:singleLine="true"
                            android:textSize="@dimen/default_textsize_9" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_jion_person"
                    style="@style/FullScreenStyle"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/chat_item_redpacket_person_bg"
                    android:gravity="right|center_vertical"
                    android:paddingBottom="5dp"
                    android:paddingRight="15dp"
                    android:paddingTop="5dp"
                    android:textColor="@color/default_join_person_color"
                    android:textSize="@dimen/default_textsize_9" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>