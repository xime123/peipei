<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/item_attention_iv_sibe"
        android:layout_width="match_parent"
        android:layout_height="23dp"
        android:background="@color/harem_type_color"
        android:gravity="center_vertical"
        android:paddingLeft="18dip"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/item_attention_iv_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingTop="10dp" >

            <FrameLayout
                android:id="@+id/rank_main_rl_frist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/default_padding_view_edge" >

                <ImageView
                    android:id="@+id/item_attention_iv_head"
                    android:layout_width="@dimen/default_height_head_chat"
                    android:layout_height="@dimen/default_height_head_chat"
                    android:background="@drawable/main_img_defaulthead_pr" />

                <ImageView
                    android:id="@+id/item_attention_iv_check"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|right"
                    android:background="@drawable/album_img_choose_un"
                    android:visibility="visible" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@id/rank_main_rl_frist"
                android:gravity="center_vertical" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/item_attention_tv_nick"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginBottom="1dp"
                            android:layout_marginRight="3dp"
                            android:layout_weight="1"
                            android:ellipsize="middle"
                            android:maxLength="8"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textSize="@dimen/default_textsize_15" />

                        <ImageView
                            android:id="@+id/iv_attention_sex"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/broadcast_img_boy" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/rank_img_green1"
                            android:padding="2dp"
                            android:text="魅力贡献值"
                            android:textColor="@color/white"
                            android:textSize="@dimen/default_textsize_11" />

                        <TextView
                            android:id="@+id/item_attention_tv_loyal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/rank_img_green2"
                            android:padding="2dp"
                            android:textColor="@color/green"
                            android:textSize="@dimen/default_textsize_11" />
                    </LinearLayout>
                </LinearLayout>

                <Button
                    android:id="@+id/item_attenion_btn_remark"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:background="@drawable/follow_btn_send_selector"
                    android:padding="5dp"
                    android:text="@string/str_remark"
                    android:textColor="@color/delete_color" />
            </LinearLayout>
        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/main_line" />
    </LinearLayout>

</LinearLayout>