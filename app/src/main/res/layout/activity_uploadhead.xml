<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg_pink"
    android:orientation="vertical" >

    <include layout="@layout/title" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:text="上传头像，才能使自己在大厅曝光，才能更好的体验陪陪！"
        android:textColor="@color/peach"
        android:textSize="@dimen/default_textsize_11" />

    <TextView
        android:id="@+id/upload_sex_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="在陪陪您可以赚取虚拟礼物，并在商城里兑换话费或实物！"
        android:textColor="@color/peach"
        android:textSize="@dimen/default_textsize_11"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="210dp"
        android:layout_height="210dp"
        android:layout_gravity="center"
        android:background="@drawable/sign_head_bg"
        android:gravity="center"
        android:padding="10dp" >

        <ImageView
            android:id="@+id/upload_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/sign_head_default"
            android:scaleType="centerCrop" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/upload_head_camera"
            android:layout_width="0dp"
            android:layout_height="@dimen/default_height_title"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/main_btn_big_selector"
            android:gravity="center" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:background="@drawable/write_icon_camera" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/camera"
                android:textColor="@color/black"
                android:textSize="@dimen/default_textsize_15" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/upload_head_photo"
            android:layout_width="0dp"
            android:layout_height="@dimen/default_height_title"
            android:layout_weight="1"
            android:background="@drawable/main_btn_big_selector"
            android:gravity="center" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:background="@drawable/write_icon_pic" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/album"
                android:textColor="@color/black"
                android:textSize="@dimen/default_textsize_15" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/upload_btn_submit"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/default_height_title"
        android:layout_margin="@dimen/default_padding_view_edge"
        android:background="@drawable/main_btn_big_selector"
        android:paddingLeft="@dimen/default_padding_view_edge"
        android:paddingRight="@dimen/default_padding_view_edge"
        android:text="@string/submit"
        android:textColor="@color/peach"
        android:textSize="@dimen/default_textsize_15" />

    <Button
        android:id="@+id/upload_btn_pass"
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_height_title"
        android:layout_marginLeft="@dimen/default_padding_view_edge"
        android:layout_marginRight="@dimen/default_padding_view_edge"
        android:background="@drawable/main_btn_big_selector"
        android:text="@string/pass"
        android:textColor="@color/gray"
        android:textSize="@dimen/default_textsize_15"
        android:visibility="gone" />

</LinearLayout>