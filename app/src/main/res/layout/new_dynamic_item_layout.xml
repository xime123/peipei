<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dip"
        android:background="@drawable/dynamic_item_bg" >

        <ImageView
            android:id="@+id/new_dynamic_item_sex"
            android:layout_width="25dip"
            android:layout_height="25dip"
            android:padding="5dip"
            android:scaleType="centerCrop"
            android:src="@drawable/hall_screening_ic_man_un" />

        <ImageView
            android:id="@+id/new_dynamic_iv"
            android:layout_width="match_parent"
            android:layout_height="270dip"
            android:layout_below="@+id/new_dynamic_item_sex"
            android:scaleType="centerCrop"
            android:src="@drawable/screen_img_bg"
            android:visibility="visible" />

        <TextView
            android:id="@+id/new_dynamic_content_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/new_dynamic_item_sex"
            android:layout_gravity="center"
            android:background="@color/official_bg1"
            android:gravity="center"
            android:shadowColor="@color/black"
            android:shadowDx="5"
            android:shadowDy="5"
            android:shadowRadius="10"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/new_dynamic_bottom_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/click_selector_peach"
                android:clickable="false"
                android:gravity="center" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/dynamic_reply_selector" />

                <TextView
                    android:id="@+id/new_dynamic_item_msg_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dip"
                    android:text="10"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/default_textsize_14" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dip"
                android:layout_weight="1"
                android:background="@drawable/click_selector_peach"
                android:clickable="false"
                android:gravity="center" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/dynamic_praise_selector" />

                <TextView
                    android:id="@+id/new_dynamic_item_reply_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dip"
                    android:text="25"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/default_textsize_14" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>