<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/valentine_day_bg" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="40dip"
        android:gravity="center" >

        <ImageView
            android:id="@+id/valentine_head1"
            android:layout_width="80dip"
            android:layout_height="80dip"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="80dip"
            android:padding="2dp"
            android:background="@drawable/broadcast_magic_balloon_head" />

        <ImageView
            android:id="@+id/valentine_head2"
            android:layout_width="80dip"
            android:layout_height="80dip"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:layout_marginRight="80dip"
            android:padding="2dp"
            android:background="@drawable/broadcast_magic_balloon_head" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/valentine_star1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dip"
        android:layout_marginTop="100dip"
        android:src="@drawable/valentine_day_star" />

    <ImageView
        android:id="@+id/valentine_star2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="50dip"
        android:layout_marginTop="100dip"
        android:src="@drawable/valentine_day_star" />

    <ImageView
        android:id="@+id/valentine_star3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="180dip"
        android:layout_marginLeft="30dip"
        android:src="@drawable/valentine_day_star" />

    <ImageView
        android:id="@+id/valentine_star4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="90dip"
        android:layout_marginRight="50dip"
        android:src="@drawable/valentine_day_star" />

    <LinearLayout
        android:id="@+id/valentine_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" />

</FrameLayout>