<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/pop_bg_white"
    android:orientation="vertical"
    android:padding="@dimen/default_padding_view_edge" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/default_padding_gridview_edge"
            android:text="@string/user_balance"
            android:textColor="@color/black"
            android:textSize="@dimen/default_textsize_15" />

        <include layout="@layout/layout_money" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/default_padding_view_edge"
        android:layout_marginTop="@dimen/default_padding_view_edge"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/dialog_gift_image"
            android:layout_width="120dip"
            android:layout_height="120dip"
            android:layout_marginRight="@dimen/default_padding_view_edge" />

        <TextView
            android:id="@+id/dialog_gift_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/default_textsize_15" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_need_consume"
            android:textColor="@color/black"
            android:textSize="@dimen/default_textsize_15" />

        <ImageView
            android:id="@+id/iv_dialog_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/default_padding_view_edge" />

        <TextView
            android:id="@+id/tv_dialog_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/default_padding_gridview_edge"
            android:textColor="@color/peach"
            android:textSize="@dimen/default_textsize_15" />
    </LinearLayout>

    <Button
        android:id="@+id/dialog_gift_buy_button"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/default_height_title_tabhost"
        android:layout_marginTop="@dimen/default_padding_view_edge"
        android:background="@drawable/main_btn_big_selector"
        android:text="@string/present"
        android:textColor="@color/peach"
        android:textSize="@dimen/default_textsize_15" />

</LinearLayout>