<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/iv_lips_head"
        style="@style/WrapContentStyle"
        android:layout_gravity="center"
        android:contentDescription="@null"
        android:padding="2dp"
        android:background="@drawable/broadcast_magic_lips_head" />

    <ImageView
        android:id="@+id/iv_lip1"
        style="@style/WrapContentStyle"
        android:layout_gravity="center"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        android:contentDescription="@null"
        android:src="@drawable/broadcast_magic_lip1"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/iv_lip2"
        style="@style/WrapContentStyle"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="80dp"
        android:contentDescription="@null"
        android:src="@drawable/broadcast_magic_lip2"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/iv_lip3"
        style="@style/WrapContentStyle"
        android:layout_gravity="center"
        android:layout_marginBottom="70dp"
        android:layout_marginLeft="70dp"
        android:contentDescription="@null"
        android:src="@drawable/broadcast_magic_lip3"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/iv_lip4"
        style="@style/WrapContentStyle"
        android:layout_gravity="center"
        android:layout_marginBottom="40dp"
        android:layout_marginLeft="120dp"
        android:contentDescription="@null"
        android:src="@drawable/broadcast_magic_lip5"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/iv_lip5"
        style="@style/WrapContentStyle"
        android:layout_gravity="center"
        android:layout_marginRight="90dp"
        android:layout_marginTop="80dp"
        android:contentDescription="@null"
        android:src="@drawable/broadcast_magic_lip4"
        android:visibility="gone" />

</FrameLayout>