<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/click_list_selector_new"
    android:gravity="center_vertical"
    android:minHeight="60dip"
    android:orientation="horizontal"
    android:padding="@dimen/default_padding_view_edge" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/message_list_header_image"
            android:layout_width="@dimen/default_height_head_chat"
            android:layout_height="@dimen/default_height_head_chat"
            android:background="@drawable/main_img_defaulthead_selector" />

        <TextView
            android:id="@+id/message_list_header_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/message_list_header_image"
            android:background="@drawable/message_img_redot1"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/default_textsize_11"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/message_list_header_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/message_list_header_image"
            android:layout_marginRight="2dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/message_img_redot0"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/is_group_flat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/message_list_header_image"
            android:layout_alignRight="@id/message_list_header_image"
            android:src="@drawable/message_list_palace_ic"
            android:visibility="gone" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/default_padding_view_edge" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/message_list_chat_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/default_textsize_15" />

            <ImageView
                android:id="@+id/message_list_chat_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp" >
            </ImageView>

            <TextView
                android:id="@+id/message_list_chat_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textColor="@color/gray"
                android:textSize="@dimen/default_textsize_13" />
        </LinearLayout>

        <TextView
            android:id="@+id/message_list_chat_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_padding_image_text_small"
            android:ellipsize="middle"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:textColor="@color/gray"
            android:textSize="@dimen/default_textsize_13" />
    </LinearLayout>

</LinearLayout>