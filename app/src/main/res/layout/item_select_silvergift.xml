<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/default_height_popuplist"
    android:descendantFocusability="blocksDescendants"
    android:gravity="center_vertical"
    android:minHeight="@dimen/default_height_popuplist"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/iv_item_select_gift"
        android:layout_width="32dip"
        android:layout_height="32dip"
        android:layout_marginLeft="@dimen/default_padding_view_edge"
        android:src="@drawable/main_img_defaultpic_small" />

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/default_padding_view_edge"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_item_select_gift_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="@dimen/default_textsize_16" />

        <TextView
            android:id="@+id/tv_item_select_gift_describe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/gray"
            android:textSize="@dimen/default_textsize_14" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_select_gift"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/default_padding_between_view"
        android:scaleType="centerInside"
        android:src="@drawable/message_chatdoor_selectbox_pr" />

</LinearLayout>