<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/new_bg_color"
    android:baselineAligned="false" >

    <LinearLayout
        android:id="@+id/ll_head_rank_top_three"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:padding="@dimen/default_padding_view_edge" >

        <RelativeLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="2" >

            <ImageView
                android:id="@+id/iv_rank_first"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/ll_top_rank_bottom"
                android:scaleType="centerCrop"
                android:src="@drawable/main_img_defaultpic_small" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/rank_img_number1" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="@dimen/default_padding_image_text_small"
                android:layout_marginTop="@dimen/default_padding_image_text_small"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/item_broadcast_head_identify_first"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="2dp"
                    android:src="@drawable/homepage_icon_identifed"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/iv_top_gradeinfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_top_rank_bottom"
                android:layout_width="match_parent"
                android:layout_height="44dip"
                android:layout_alignParentBottom="true"
                android:background="@drawable/rank_girl_bg"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingLeft="@dimen/default_padding_gridview_edge" >

                <TextView
                    android:id="@+id/tv_rank_top_first_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/default_textsize_15" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <LinearLayout
                        android:id="@+id/ll_rank_top_male_gold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/rank_img_orange1"
                            android:padding="2dp"
                            android:text="财富值"
                            android:textColor="@color/white"
                            android:textSize="@dimen/default_textsize_11" />

                        <TextView
                            android:id="@+id/tv_rank_top_male_gold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/rank_img_orange2"
                            android:gravity="center"
                            android:minWidth="@dimen/default_padding_queen_bottom"
                            android:padding="2dp"
                            android:singleLine="true"
                            android:text="0"
                            android:textColor="@color/orange2"
                            android:textSize="@dimen/default_textsize_11" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_rank_top_female_glamour"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="1dip" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/rank_img_purple1"
                            android:padding="2dp"
                            android:text="@string/glamour"
                            android:textColor="@color/white"
                            android:textSize="@dimen/default_textsize_11" />

                        <TextView
                            android:id="@+id/tv_rank_top_female_glamour"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/rank_img_purple2"
                            android:gravity="center"
                            android:minWidth="@dimen/default_padding_queen_bottom"
                            android:padding="2dp"
                            android:singleLine="true"
                            android:text="0"
                            android:textColor="@color/purple"
                            android:textSize="@dimen/default_textsize_11" />
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/iv_top_level_head1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="@dimen/header_footer_top_bottom_padding"
                android:layout_marginRight="@dimen/default_padding_gridview_edge"
                android:src="@drawable/rank_img_girl1_1" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_marginLeft="3dip"
            android:layout_weight="1"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="1" >

                <ImageView
                    android:id="@+id/iv_rank_second"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/main_img_defaultpic_small" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/rank_img_number2" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="@dimen/default_padding_image_text_small"
                    android:layout_marginTop="@dimen/default_padding_image_text_small"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/item_broadcast_head_identify_sec"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="2dp"
                        android:src="@drawable/homepage_icon_identifed"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/iv_second_gradeinfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dip"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/rank_girl_bg"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/default_padding_gridview_edge" >

                    <TextView
                        android:id="@+id/tv_rank_top_second_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="40dip"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:textColor="@color/black" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <LinearLayout
                            android:id="@+id/ll_rank_second_male_gold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:visibility="gone" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/rank_img_orange1"
                                android:padding="2dp"
                                android:text="财富值"
                                android:textColor="@color/white"
                                android:textSize="@dimen/default_textsize_11" />

                            <TextView
                                android:id="@+id/tv_rank_second_male_gold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/rank_img_orange2"
                                android:gravity="center"
                                android:minWidth="@dimen/default_padding_queen_bottom"
                                android:padding="2dp"
                                android:singleLine="true"
                                android:text="0"
                                android:textColor="@color/orange2"
                                android:textSize="@dimen/default_textsize_11" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_rank_second_female_glamour"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingBottom="1dip" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/rank_img_purple1"
                                android:padding="2dp"
                                android:text="@string/glamour"
                                android:textColor="@color/white"
                                android:textSize="@dimen/default_textsize_11" />

                            <TextView
                                android:id="@+id/tv_rank_second_female_glamour"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/rank_img_purple2"
                                android:gravity="center"
                                android:minWidth="@dimen/default_padding_queen_bottom"
                                android:padding="2dp"
                                android:singleLine="true"
                                android:text="0"
                                android:textColor="@color/purple"
                                android:textSize="@dimen/default_textsize_11" />
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_second_level_head"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="28dip"
                    android:layout_marginRight="@dimen/default_padding_gridview_edge"
                    android:src="@drawable/rank_img_girl2_2" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_marginTop="3dip"
                android:layout_weight="1" >

                <ImageView
                    android:id="@+id/iv_rank_third"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/main_img_defaultpic_small" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/rank_img_number3" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="@dimen/default_padding_image_text_small"
                    android:layout_marginTop="@dimen/default_padding_image_text_small"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/item_broadcast_head_identify_three"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="2dp"
                        android:src="@drawable/homepage_icon_identifed"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/iv_third_gradeinfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_third_rank_bottom"
                    android:layout_width="match_parent"
                    android:layout_height="44dip"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/rank_girl_bg"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/default_padding_gridview_edge" >

                    <TextView
                        android:id="@+id/tv_rank_third_first_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="40dip"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:textColor="@color/black" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <LinearLayout
                            android:id="@+id/ll_rank_third_male_gold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:visibility="gone" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/rank_img_orange1"
                                android:padding="2dp"
                                android:text="财富值"
                                android:textColor="@color/white"
                                android:textSize="@dimen/default_textsize_11" />

                            <TextView
                                android:id="@+id/tv_rank_third_male_gold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/rank_img_orange2"
                                android:gravity="center"
                                android:minWidth="@dimen/default_padding_queen_bottom"
                                android:padding="2dp"
                                android:singleLine="true"
                                android:text="0"
                                android:textColor="@color/orange2"
                                android:textSize="@dimen/default_textsize_11" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_rank_third_female_glamour"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingBottom="1dip" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/rank_img_purple1"
                                android:padding="2dp"
                                android:text="@string/glamour"
                                android:textColor="@color/white"
                                android:textSize="@dimen/default_textsize_11" />

                            <TextView
                                android:id="@+id/tv_rank_third_female_glamour"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/rank_img_purple2"
                                android:gravity="center"
                                android:minWidth="@dimen/default_padding_queen_bottom"
                                android:padding="2dp"
                                android:singleLine="true"
                                android:text="0"
                                android:textColor="@color/purple"
                                android:textSize="@dimen/default_textsize_11" />
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_third_level_head"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="28dip"
                    android:layout_marginRight="@dimen/default_padding_gridview_edge"
                    android:src="@drawable/rank_img_girl3_3" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>