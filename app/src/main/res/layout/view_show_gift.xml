<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_showroom_gift"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/casino_gift_capacity_shade" />

    <GridView
        android:id="@+id/showroom_gift_gridview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/message_bg_white"
        android:cacheColorHint="@null"
        android:fadingEdge="none"
        android:horizontalSpacing="0dp"
        android:listSelector="@drawable/gift_img_kuang"
        android:numColumns="5"
        android:stretchMode="columnWidth"
        android:verticalSpacing="0dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="数量"
            android:textColor="@color/black"
            android:textSize="@dimen/default_textsize_13" />

        <TextView
            android:id="@+id/showroom_gift_num"
            android:layout_width="55dp"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/message_gift_number_bg_selector"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/gray60"
            android:textSize="@dimen/default_textsize_13" />

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/showroom_gift_send"
            android:layout_width="70dp"
            android:layout_height="36dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/message_gift_give_selector"
            android:text="@string/present"
            android:textColor="@color/white"
            android:textSize="@dimen/default_textsize_15" />
    </LinearLayout>

</LinearLayout>