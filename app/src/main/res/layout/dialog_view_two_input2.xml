<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/pop_bg_white"
    android:orientation="vertical"
    android:padding="@dimen/default_padding_view_text" >

    <ScrollView
        android:id="@+id/ScrollView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/dialog_title_frist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/input_album_name"
                android:textColor="@color/gray"
                android:textSize="@dimen/default_textsize_13" />

            <EditText
                android:id="@+id/dialog_edit_frist"
                android:layout_width="match_parent"
                android:layout_height="@dimen/default_height_title_tabhost"
                android:layout_marginBottom="@dimen/default_padding_gridview_edge"
                android:layout_marginTop="@dimen/default_padding_gridview_edge"
                android:background="@drawable/main_img_insert"
                android:padding="@dimen/default_padding_image_text_small"
                android:textSize="@dimen/default_textsize_15" />

            <TextView
                android:id="@+id/dialog_title_second"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/input_album_loyalty"
                android:textColor="@color/gray"
                android:textSize="@dimen/default_textsize_13" />

            <TextView
                android:id="@+id/dialog_edit_second"
                android:layout_width="match_parent"
                android:layout_height="@dimen/default_height_title_tabhost"
                android:layout_marginBottom="@dimen/default_padding_gridview_edge"
                android:layout_marginTop="@dimen/default_padding_gridview_edge"
                android:background="@drawable/main_img_insert"
                android:drawableRight="@drawable/pop_img_arrow"
                android:gravity="center_vertical"
                android:padding="@dimen/default_padding_image_text_small"
                android:textColor="@color/black"
                android:textSize="@dimen/default_textsize_15" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="bottom"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/dialog_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/default_padding_view_text"
            android:layout_weight="1"
            android:background="@drawable/main_btn_big_selector"
            android:paddingBottom="@dimen/default_padding_gridview_edge"
            android:paddingTop="@dimen/default_padding_gridview_edge"
            android:text="@string/cancel"
            android:textSize="@dimen/default_textsize_15" />

        <Button
            android:id="@+id/dialog_ok"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:background="@drawable/main_btn_big_selector"
            android:paddingBottom="@dimen/default_padding_gridview_edge"
            android:paddingTop="@dimen/default_padding_gridview_edge"
            android:text="@string/ok"
            android:textColor="@color/peach"
            android:textSize="@dimen/default_textsize_15" />
    </LinearLayout>

</LinearLayout>