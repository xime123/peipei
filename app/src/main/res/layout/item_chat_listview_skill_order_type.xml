<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/default_padding_view_edge"
    android:paddingTop="@dimen/default_padding_view_edge" >

    <LinearLayout
        android:id="@+id/ll_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="61dip"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/default_padding_view_edge" >

        <include layout="@layout/item_chat_left_head" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/default_padding_gridview_edge"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/message_img_bubblebg_white"
                android:orientation="vertical"
                android:padding="@dimen/default_padding_view_edge" >

                <TextView
                    android:id="@+id/tv_skill_order_toast"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dip"
                    android:layout_marginRight="5dip"
                    android:layout_marginTop="@dimen/default_padding_view_text"
                    android:text="@string/str_req_join_your_harem"
                    android:textColor="@color/black"
                    android:textSize="@dimen/default_textsize_15" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dip"
                    android:layout_marginLeft="5dip"
                    android:layout_marginRight="5dip"
                    android:layout_marginTop="20dip"
                    android:orientation="horizontal" >

                    <Button
                        android:id="@+id/ok_cancel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/default_padding_view_text"
                        android:layout_weight="1"
                        android:background="@drawable/main_btn_big_selector"
                        android:gravity="center"
                        android:paddingBottom="@dimen/default_padding_gridview_edge"
                        android:paddingTop="@dimen/default_padding_gridview_edge"
                        android:text="@string/str_skill_order_refuse"
                        android:textSize="@dimen/default_textsize_15" />

                    <Button
                        android:id="@+id/ok_sure"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/main_btn_big_selector"
                        android:gravity="center"
                        android:paddingBottom="@dimen/default_padding_gridview_edge"
                        android:paddingTop="@dimen/default_padding_gridview_edge"
                        android:text="@string/str_receive"
                        android:textColor="@color/peach"
                        android:textSize="@dimen/default_textsize_15" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/chat_item_skill_order_receive_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_padding_gridview_edge"
                android:paddingRight="@dimen/default_padding_view_text"
                android:textColor="@color/white"
                android:textSize="@dimen/default_textsize_10" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/chat_skill_order_step_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/default_padding_view_edge"
        android:background="@drawable/message_prompt_bg"
        android:paddingBottom="@dimen/default_padding_view_edge"
        android:paddingLeft="@dimen/default_padding_view_edge"
        android:paddingRight="@dimen/default_padding_view_edge"
        android:paddingTop="@dimen/default_padding_view_edge"
        android:text="@string/str_skill_order_step_one"
        android:textColor="@color/gray_low"
        android:textSize="@dimen/default_textsize_13" />

</LinearLayout>