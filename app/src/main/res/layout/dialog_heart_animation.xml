<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/iv_heart_large"
        style="@style/WrapContentStyle"
        android:layout_gravity="center"
        android:contentDescription="@null"
        android:src="@drawable/broadcast_magicarrow_heart" />

    <ImageView
        style="@style/WrapContentStyle"
        android:layout_gravity="center"
        android:contentDescription="@null"
        android:src="@drawable/broadcast_magicarrow_heart_more" />

    <ImageView
        android:id="@+id/iv_arrow_left_head"
        style="@style/WrapContentStyle"
        android:layout_gravity="center"
        android:layout_marginRight="30dp"
        android:padding="2dp"
        android:background="@drawable/broadcast_magicarrow_head"
        android:contentDescription="@null" />

    <ImageView
        android:id="@+id/iv_arrow_right_head"
        style="@style/WrapContentStyle"
        android:layout_gravity="center"
        android:layout_marginLeft="45dp"
        android:padding="2dp"
        android:background="@drawable/broadcast_magicarrow_head"
        android:contentDescription="@null" />

    <ImageView
        android:id="@+id/iv_arrow_all"
        style="@style/WrapContentStyle"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="5dp"
        android:contentDescription="@null"
        android:src="@drawable/broadcast_magicarrow_all"
        android:visibility="gone" />

    <ImageView
        style="@style/WrapContentStyle"
        android:layout_gravity="center"
        android:layout_marginLeft="5dp"
        android:contentDescription="@null"
        android:src="@drawable/broadcast_magicarrow_heart_small" />

    <ImageView
        android:id="@+id/iv_arrow_left"
        style="@style/WrapContentStyle"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="5dp"
        android:contentDescription="@null"
        android:src="@drawable/broadcast_magicarrow_post"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/iv_arrow_right"
        style="@style/WrapContentStyle"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="5dp"
        android:contentDescription="@null"
        android:src="@drawable/broadcast_magicarrow_pre"
        android:visibility="gone" />

</FrameLayout>