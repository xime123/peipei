<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:orientation="vertical"
    android:paddingBottom="@dimen/default_padding_view_edge"
    android:paddingLeft="@dimen/default_padding_view_edge"
    android:paddingRight="@dimen/default_padding_view_edge"
    android:paddingTop="@dimen/default_padding_view_edge" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="top"
        android:orientation="horizontal" >

        <include
            android:id="@+id/chat_item_truth_left_head_layout"
            layout="@layout/item_chat_left_head" />

        <RelativeLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="@dimen/default_padding_image_text_small"
            android:paddingRight="@dimen/default_padding_image_text_small" >

            <TextView
                android:id="@+id/chat_item_truth_content_text_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/chat_item_left"
                android:gravity="center|left"
                android:lineSpacingExtra="3dip"
                android:minWidth="45dip"
                android:paddingBottom="@dimen/default_padding_view_edge"
                android:paddingLeft="18dip"
                android:paddingRight="@dimen/default_padding_view_edge"
                android:paddingTop="@dimen/default_padding_view_edge"
                android:textColor="@color/black"
                android:textIsSelectable="true"
                android:textSize="@dimen/default_textsize_15" />

            <TextView
                android:id="@+id/chat_item_truth_content_text_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="right"
                android:background="@drawable/chat_item_right"
                android:lineSpacingExtra="3dip"
                android:minWidth="45dip"
                android:padding="@dimen/default_padding_view_edge"
                android:textColor="@color/black"
                android:textIsSelectable="true"
                android:textSize="@dimen/default_textsize_15" />
        </RelativeLayout>

        <include
            android:id="@+id/chat_item_truth_right_head_layout"
            layout="@layout/item_chat_right_head" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/chat_item_truth_problem_board_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/default_height_popuplist"
        android:layout_marginRight="@dimen/default_height_popuplist"
        android:layout_marginTop="@dimen/default_padding_view_edge"
        android:background="@drawable/message_prompt_bg"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="15dip"
        android:paddingLeft="20dip"
        android:paddingRight="20dip"
        android:paddingTop="@dimen/aipay_margin_vertical" >
    </LinearLayout>

</LinearLayout>