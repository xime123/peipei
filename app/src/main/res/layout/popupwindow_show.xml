<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_main_message_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/main_bg_black70" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dip"
        android:orientation="horizontal" >

        <View
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="150dip"
            android:layout_height="fill_parent"
            android:layout_marginRight="@dimen/default_padding_view_edge"
            android:orientation="vertical"
            android:paddingTop="@dimen/default_padding_gridview_edge" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:paddingRight="@dimen/default_padding_view_edge"
                android:scaleType="fitCenter"
                android:src="@drawable/broadcast_img_pop" />

            <TextView
                android:id="@+id/tv_show_share"
                android:layout_width="match_parent"
                android:layout_height="@dimen/default_height_title"
                android:background="@drawable/main_img_list1_selector"
                android:gravity="center_vertical"
                android:padding="@dimen/default_padding_view_edge"
                android:text="@string/share"
                android:textColor="@color/black"
                android:textSize="@dimen/default_textsize_16" />
            
            <TextView
                android:id="@+id/tv_show_inout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/default_height_title"
                android:background="@drawable/main_img_list2_selector"
                android:gravity="center_vertical"
                android:padding="@dimen/default_padding_view_edge"
                android:text="@string/str_show_out_room"
                android:textColor="@color/black"
                android:textSize="@dimen/default_textsize_16" />

            

            <TextView
                android:id="@+id/tv_show_report"
                android:layout_width="match_parent"
                android:layout_height="@dimen/default_height_title"
                android:background="@drawable/main_img_list3_selector"
                android:gravity="center_vertical"
                android:padding="@dimen/default_padding_view_edge"
                android:text="@string/report"
                android:textColor="@color/black"
                android:textSize="@dimen/default_textsize_16" />
            
            <TextView
                android:id="@+id/tv_show_close"
                android:layout_width="match_parent"
                android:layout_height="@dimen/default_height_title"
                android:background="@drawable/main_img_list3_selector"
                android:gravity="center_vertical"
                android:padding="@dimen/default_padding_view_edge"
                android:text="@string/str_show_close"
                android:textColor="@color/black"
                android:textSize="@dimen/default_textsize_16"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>