<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:gravity="center_vertical"
    android:minHeight="65dp"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:descendantFocusability="blocksDescendants"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="@dimen/default_height_head_chat"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/default_padding_view_edge"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/item_hall_skill_head"
                android:layout_width="@dimen/default_height_head_chat"
                android:layout_height="@dimen/default_height_head_chat"
                android:src="@drawable/main_img_defaulthead_pr" />

            <TextView
                android:id="@+id/item_hall_skill_nick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_padding_gridview_edge"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/default_textsize_12" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/default_padding_view_edge" >

            <TextView
                android:id="@+id/item_hall_skill_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/default_textsize_16" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/item_hall_skill_join"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="0dp"
                    android:textColor="@color/peach"
                    android:textSize="@dimen/default_textsize_13" />

                <RatingBar
                    android:id="@+id/item_hall_skill_rb"
                    android:layout_width="wrap_content"
                    android:layout_height="20dip"
                    android:isIndicator="true"
                    android:max="50"
                    android:numStars="5"
                    android:progressDrawable="@drawable/rating_bar_full"
                    android:rating="4"
                    android:stepSize="10" />
            </LinearLayout>

            <TextView
                android:id="@+id/item_hall_skill_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:textColor="@color/gray"
                android:textSize="@dimen/default_textsize_13" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/main_line" />

</LinearLayout>