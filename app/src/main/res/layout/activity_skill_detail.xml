<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg_pink"
    android:orientation="vertical" >

    <include layout="@layout/title" />

    <com.tshang.peipei.view.ReboundScrollView
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:fadingEdge="none"
        android:overScrollMode="never"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/default_padding_view_edge" >

            <LinearLayout
                android:id="@+id/ll_skill_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/main_img_list0_selector"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/iv_skill_user_head"
                    android:layout_width="@dimen/default_mine_head_size"
                    android:layout_height="@dimen/default_mine_head_size"
                    android:layout_margin="@dimen/default_padding_view_edge"
                    android:src="@drawable/main_img_defaulthead_un" />

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dip"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/default_padding_view_edge"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/tv_skill_user_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textSize="@dimen/default_textsize_15" />

                        <ImageView
                            android:id="@+id/iv_user_level_head"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/default_padding_image_text_small" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_skill_detail_isonline"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:textColor="@color/green"
                        android:textSize="@dimen/default_textsize_13" />
                </LinearLayout>

                <include layout="@layout/layout_right_arrow" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_mine_gift"
                android:layout_width="match_parent"
                android:layout_height="80dip"
                android:layout_marginTop="@dimen/default_padding_view_edge"
                android:background="@drawable/main_img_list1_un"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingLeft="@dimen/default_padding_view_text"
                android:paddingRight="@dimen/default_padding_view_text" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tv_skill_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="@string/str_skills"
                        android:textColor="@color/black"
                        android:textSize="@dimen/default_textsize_15" />

                    <TextView
                        android:id="@+id/tv_skill_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="28dip"
                        android:singleLine="true"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/default_textsize_13" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/default_padding_view_text"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tv_skill_join_people"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:singleLine="true"
                        android:textColor="@color/peach"
                        android:textSize="@dimen/default_textsize_13" />

                    <RatingBar
                        android:id="@+id/rb_skill_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="20dip"
                        android:isIndicator="true"
                        android:max="50"
                        android:numStars="5"
                        android:progressDrawable="@drawable/rating_bar_full"
                        android:rating="4"
                        android:stepSize="10" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/main_img_list2_un"
                android:minHeight="75dip"
                android:orientation="horizontal"
                android:padding="@dimen/default_padding_view_text" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="@string/str_describe"
                    android:textColor="@color/black"
                    android:textSize="@dimen/default_textsize_15" />

                <TextView
                    android:id="@+id/tv_skill_describe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="28dip"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/default_textsize_13" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_gift"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/main_img_list2_un"
                android:minHeight="75dip"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_need_gift"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/default_padding_view_text"
                    android:layout_marginTop="@dimen/default_padding_view_text"
                    android:text="@string/str_need_gift"
                    android:textColor="@color/black"
                    android:textSize="@dimen/default_textsize_15" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/default_padding_view_text"
                    android:layout_marginLeft="28dip"
                    android:layout_marginRight="@dimen/default_padding_view_text"
                    android:layout_marginTop="@dimen/default_padding_view_text"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/iv_skill_gift"
                        android:layout_width="68dip"
                        android:layout_height="68dip"
                        android:contentDescription="@string/about_beiai"
                        android:src="@drawable/main_img_defaultpic_small" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/tv_skill_detail_gift_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="@dimen/default_textsize_15" />

                        <TextView
                            android:id="@+id/tv_skill_detail_gift_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/default_padding_view_text"
                            android:textColor="@color/peach"
                            android:textSize="@dimen/default_textsize_15" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_rating"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rating_bg_selector"
                android:gravity="center"
                android:paddingLeft="@dimen/default_padding_view_text"
                android:paddingRight="@dimen/default_padding_view_text"
                android:text="@string/str_enjoy_step"
                android:textColor="@color/gray"
                android:textSize="@dimen/default_textsize_15" />

            <LinearLayout
                android:id="@+id/ll_male_skill_bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/default_padding_view_edge"
                android:layout_marginTop="@dimen/default_padding_view_edge"
                android:background="@drawable/main_img_list0_selector"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/default_padding_view_text"
                    android:paddingLeft="@dimen/default_padding_view_text"
                    android:paddingTop="@dimen/default_padding_view_text"
                    android:singleLine="true"
                    android:text="@string/str_have_sign_up"
                    android:textColor="@color/black"
                    android:textSize="@dimen/default_textsize_15" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:src="@drawable/main_line" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <com.tshang.peipei.view.PeipeiGridView
                        android:id="@+id/gv_interestin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:cacheColorHint="@android:color/transparent"
                        android:fadingEdge="none"
                        android:fastScrollEnabled="false"
                        android:horizontalSpacing="@dimen/default_padding_view_text"
                        android:listSelector="@android:color/transparent"
                        android:numColumns="5"
                        android:overScrollMode="never"
                        android:padding="@dimen/default_padding_view_text"
                        android:verticalSpacing="@dimen/default_padding_view_text"
                        android:visibility="gone" />

                    <com.tshang.peipei.view.ReplyChildListView
                        android:id="@+id/lv_interestin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:cacheColorHint="@android:color/transparent"
                        android:divider="@android:color/transparent"
                        android:fadingEdge="none"
                        android:fastScrollEnabled="false"
                        android:listSelector="@android:color/transparent"
                        android:overScrollMode="never"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tv_no_sign_up"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:minHeight="60dip"
                        android:text="@string/str_no_sign_up"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/default_textsize_13" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </com.tshang.peipei.view.ReboundScrollView>

    <RelativeLayout
        android:id="@+id/rl_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_height_title_tabhost" >

        <TextView
            android:id="@+id/tv_bottom_interested_in"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/click_bottom_selector_bg"
            android:gravity="center"
            android:text="@string/str_interested_in"
            android:textColor="@color/peach"
            android:textSize="@dimen/default_textsize_15" />

        <LinearLayout
            android:id="@+id/ll_bottom_female"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/ll_skill_detail_left"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/click_bottom_selector_bg"
                android:gravity="center"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/iv_bottom_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/default_padding_gridview_edge"
                    android:src="@drawable/homepage_skill_ic_delete" />

                <TextView
                    android:id="@+id/tv_skill_detail_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str_delete_skill"
                    android:textColor="@color/peach"
                    android:textSize="@dimen/default_textsize_15" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_skill_detail_right"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/click_bottom_selector_bg"
                android:gravity="center"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/default_padding_gridview_edge"
                    android:src="@drawable/homepage_skill_ic_compile" />

                <TextView
                    android:id="@+id/tv_skill_detail_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str_edit_skill"
                    android:textColor="@color/peach"
                    android:textSize="@dimen/default_textsize_15" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>