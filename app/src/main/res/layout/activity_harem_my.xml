<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg_pink"
    android:orientation="vertical" >

    <include layout="@layout/title" />

    <com.tshang.peipei.view.ReboundScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadingEdge="none"
        android:overScrollMode="never"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_my_create_harem_tag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/harem_type_color"
                android:paddingBottom="@dimen/default_padding_gridview_edge"
                android:paddingLeft="@dimen/default_padding_view_edge"
                android:paddingRight="@dimen/default_padding_view_edge"
                android:paddingTop="@dimen/default_padding_gridview_edge"
                android:text="@string/str_my_harem"
                android:textColor="@color/black"
                android:textSize="@dimen/default_textsize_14" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <LinearLayout
                    android:id="@+id/ll_create_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/default_padding_view_edge"
                    android:visibility="gone" >

                    <Button
                        android:id="@+id/btn_create_harem"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/default_height_title"
                        android:background="@drawable/btn_create_harem_selector"
                        android:text="@string/str_create_harem"
                        android:textColor="@color/white"
                        android:textSize="@dimen/default_textsize_15"
                        android:visibility="gone" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_my_create_harem_empty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingBottom="@dimen/default_padding_view_edge"
                    android:paddingLeft="@dimen/default_padding_view_edge"
                    android:paddingRight="@dimen/default_padding_view_edge"
                    android:paddingTop="@dimen/default_padding_view_edge"
                    android:text="@string/str_not_join_harem"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/default_textsize_14"
                    android:visibility="gone" />

                <com.tshang.peipei.view.ReplyChildListView
                    android:id="@+id/lv_my_create_harem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:cacheColorHint="@android:color/transparent"
                    android:divider="@drawable/main_line"
                    android:fadingEdge="none"
                    android:listSelector="@drawable/click_selector_peach"
                    android:overScrollMode="never"
                    android:visibility="gone" >
                </com.tshang.peipei.view.ReplyChildListView>
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_my_join_harem_tag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/harem_type_color"
                android:paddingBottom="@dimen/default_padding_gridview_edge"
                android:paddingLeft="@dimen/default_padding_view_edge"
                android:paddingRight="@dimen/default_padding_view_edge"
                android:paddingTop="@dimen/default_padding_gridview_edge"
                android:text="@string/str_my_join_harem"
                android:textColor="@color/black"
                android:textSize="@dimen/default_textsize_14" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/tv_my_join_harem_empty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingBottom="@dimen/default_padding_view_edge"
                    android:paddingLeft="@dimen/default_padding_view_edge"
                    android:paddingRight="@dimen/default_padding_view_edge"
                    android:paddingTop="@dimen/default_padding_view_edge"
                    android:text="@string/str_not_join_harem"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/default_textsize_14"
                    android:visibility="gone" />

                <com.tshang.peipei.view.ReplyChildListView
                    android:id="@+id/lv_my_join_harem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:cacheColorHint="@android:color/transparent"
                    android:divider="@drawable/main_line"
                    android:fadingEdge="none"
                    android:listSelector="@drawable/click_selector_peach"
                    android:overScrollMode="never" >
                </com.tshang.peipei.view.ReplyChildListView>
            </RelativeLayout>
        </LinearLayout>
    </com.tshang.peipei.view.ReboundScrollView>

</LinearLayout>