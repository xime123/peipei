<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/base_dialog_background"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/dialog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:paddingTop="10dip"
            android:textColor="@color/dialog_title"
            android:textSize="20sp" />

        <FrameLayout
            android:id="@+id/dialog_content_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingBottom="15dip"
            android:paddingTop="15dip" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:background="@color/dialog_line" />

        <LinearLayout
            android:id="@+id/dialog_bottom_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|right" >

            <TextView
                android:id="@+id/dialog_calcel_text"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="10dip"
                android:text="@string/dialog_cancel"
                android:textColor="@color/dialog_cancel"
                android:textSize="18sp" />

            <View
                android:id="@+id/dialog_vertical_line"
                android:layout_width="0.5dip"
                android:layout_height="match_parent"
                android:background="@color/dialog_line" />

            <TextView
                android:id="@+id/dialog_confirm_text"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="10dip"
                android:text="@string/dialog_confirm"
                android:textColor="@color/dialog_confirm"
                android:textSize="18sp"
                android:visibility="visible" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>