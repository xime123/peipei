<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/default_padding_view_edge"
        android:paddingLeft="@dimen/default_padding_view_edge"
        android:paddingTop="@dimen/default_padding_view_edge" >

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_red_packet_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxWidth="160dip"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/default_textsize_16" />

                <TextView
                    android:id="@+id/tv_red_packet_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dip"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/default_textsize_12" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_red_packet_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:background="@drawable/message_receivepacket_bg"
                android:paddingBottom="5dip"
                android:paddingLeft="8dip"
                android:paddingRight="8dip"
                android:paddingTop="@dimen/default_padding_view_edge"
                android:textColor="@color/gray"
                android:textSize="@dimen/default_textsize_12" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_red_packet_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingBottom="@dimen/default_padding_view_edge"
            android:paddingLeft="25dip"
            android:paddingRight="25dip"
            android:paddingTop="@dimen/default_padding_view_edge"
            android:textColor="@color/redpacket_status_getting_color"
            android:textSize="20sp" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/main_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="@dimen/default_padding_view_edge" >

        <TextView
            android:id="@+id/tv_get_redpacket_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/default_textsize_14" />

        <TextView
            android:id="@+id/tv_get_redpacket_coin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/orange2"
            android:textSize="@dimen/default_textsize_14" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/gold_money"
            android:textColor="@color/black"
            android:textSize="@dimen/default_textsize_14" />

        <View
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_total_redpacket_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/default_textsize_14" />

        <TextView
            android:id="@+id/tv_total_redpacket_coin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/orange2"
            android:textSize="@dimen/default_textsize_14" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/gold_money"
            android:textColor="@color/black"
            android:textSize="@dimen/default_textsize_14" />
    </LinearLayout>

</LinearLayout>