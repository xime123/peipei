<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/solitaire_redpacket_requestion_bg"
    android:orientation="vertical" >

    <TextView
        style="@style/WrapContentStyle"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:text="@string/str_so_sorry"
        android:textColor="@color/space_black"
        android:textSize="@dimen/default_textsize_20" />

    <TextView
        android:id="@+id/tv_money_type"
        style="@style/WrapContentStyle"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:text="@string/str_redpacket_gold_add"
        android:textColor="@color/space_black"
        android:textSize="@dimen/default_textsize_13" />

    <TextView
        android:id="@+id/tv_money"
        style="@style/WrapContentStyle"
        android:layout_gravity="center_horizontal"
        android:contentDescription="@null"
        android:textColor="@color/default_solitaire_redpacket_text_color"
        android:textSize="@dimen/default_textsize_50" />

    <TextView
        android:id="@+id/tv_ok"
        style="@style/WrapContentStyle"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="23dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/solitaire_redpacket_send_bg"
        android:gravity="center"
        android:minWidth="150dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="@string/ok"
        android:textColor="@color/white"
        android:textSize="@dimen/default_textsize_16" />

</LinearLayout>