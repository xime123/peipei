<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/pop_bg_white"
    android:orientation="vertical"
    android:padding="@dimen/default_padding_view_text" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/daily_login_content"
        android:textColor="@color/black"
        android:textSize="@dimen/default_textsize_15" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_padding_view_text"
            android:src="@drawable/pop_img_infor" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/receive_content"
            android:textColor="@color/gray60"
            android:textSize="@dimen/default_textsize_13" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/receive_never"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/default_height_title_tabhost"
            android:layout_margin="@dimen/default_padding_image_text_small"
            android:layout_weight="1"
            android:background="@drawable/main_btn_big_selector"
            android:text="@string/receive_never"
            android:textColor="@color/black"
            android:textSize="@dimen/default_textsize_15" />

        <Button
            android:id="@+id/receive_now"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/default_height_title_tabhost"
            android:layout_margin="@dimen/default_padding_image_text_small"
            android:layout_weight="1"
            android:background="@drawable/main_btn_big_selector"
            android:text="@string/receive_now"
            android:textColor="@color/peach"
            android:textSize="@dimen/default_textsize_15" />
    </LinearLayout>

</LinearLayout>