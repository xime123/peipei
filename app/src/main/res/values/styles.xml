<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.

    -->
    <style name="AppBaseTheme" parent="@android:style/Theme.NoTitleBar">
        <item name="android:screenOrientation">sensor</item>
    </style>

    <!-- Application theme. -->
 <!--   <style name="AppTheme" parent="AppBaseTheme">
        &lt;!&ndash; All customizations that are NOT specific to a particular API-level can go here. &ndash;&gt;
    </style>-->

    <style name="ButtonBar">
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:background">@android:drawable/bottom_bar</item>
    </style>

    <style name="FullscreenTheme" parent="android:Theme.NoTitleBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:windowIsTranslucent">false</item>
    </style>

    <style name="button_style">
        <item name="android:layout_marginLeft">3dip</item>
        <item name="android:layout_marginRight">3dip</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">19sp</item>
    </style>

    <style name="edittxt_style">
        <item name="android:layout_marginLeft">7dip</item>
        <item name="android:background">@null</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="pop_animation_fade_style">

        <!-- PopupWindow弹出的效果 -->
        <item name="android:windowEnterAnimation">@anim/activity_alpha_in</item>
        <item name="android:windowExitAnimation">@anim/activity_alpha_out</item>
    </style>

    <!-- <item name="android:windowAnimationStyle">@+android:style/Animation.Translucent</item> -->
    <style name="whisper_act_transparent">
        <item name="android:windowBackground">@color/transparent_half_background</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="dialog_animation" parent="android:Animation">
        <item name="@android:windowEnterAnimation">@anim/dialog_enter</item>
        <item name="@android:windowExitAnimation">@anim/dialog_exit</item>
    </style>

    <style name="dialogStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent </item>
    </style>

    <style name="customDialog">
        <item name="android:windowNoTitle">true</item> <!-- 设置title -->
        <item name="android:windowBackground">@color/transparent_half_background</item>
        <item name="android:windowFrame">@null</item> <!-- 设置边框 -->
        <item name="android:windowIsTranslucent">true</item> <!-- 设置半透明 -->

    </style>

    <!-- 界面跳转动画 -->
    <style name="AnimationActivity" parent="AppTheme">
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="AudioFileInfoOverlayText">
        <item name="android:paddingLeft">4dip</item>
        <item name="android:paddingBottom">4dip</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="AudioFileInfoOverlayText1">
        <item name="android:paddingLeft">4dip</item>
        <item name="android:paddingBottom">4dip</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">60sp</item>
    </style>

    <style name="AudioFileInfoOverlayText2">
        <item name="android:paddingLeft">4dip</item>
        <item name="android:paddingBottom">4dip</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">60sp</item>
    </style>

    <!-- poupwindow -->
    <style name="Animations" />

    <!-- PopDownMenu -->
    <style name="Animations.PopDownMenu" />

    <style name="Animations.PopDownMenu.Center">
        <item name="@android:windowEnterAnimation">@anim/grow_from_top</item>
        <item name="@android:windowExitAnimation">@anim/shrink_from_bottom</item>
    </style>

    <style name="Animations.PopDownMenu.Left">
        <item name="@android:windowEnterAnimation">@anim/grow_from_topleft_to_bottomright</item>
        <item name="@android:windowExitAnimation">@anim/shrink_from_bottomright_to_topleft</item>
    </style>

    <style name="Animations.PopDownMenu.Right">
        <item name="@android:windowEnterAnimation">@anim/grow_from_topright_to_bottomleft</item>
        <item name="@android:windowExitAnimation">@anim/shrink_from_bottomleft_to_topright</item>
    </style>

    <!-- PopUpMenu -->
    <style name="Animations.PopUpMenu" />

    <style name="Animations.PopUpMenu.Center">
        <item name="@android:windowEnterAnimation">@anim/grow_from_bottom</item>
        <item name="@android:windowExitAnimation">@anim/shrink_from_top</item>
    </style>

    <style name="Animations.PopUpMenu.Left">
        <item name="@android:windowEnterAnimation">@anim/grow_from_bottomleft_to_topright</item>
        <item name="@android:windowExitAnimation">@anim/shrink_from_topright_to_bottomleft</item>
    </style>

    <style name="Animations.PopUpMenu.Right">
        <item name="@android:windowEnterAnimation">@anim/grow_from_bottomright_to_topleft</item>
        <item name="@android:windowExitAnimation">@anim/shrink_from_topleft_to_bottomright</item>
    </style>

    <style name="dialogStyle3" parent="@android:style/Theme.Translucent.NoTitleBar">
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="ProgressBar_Mini" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:indeterminateDrawable">@android:drawable/progress_indeterminate_horizontal</item>
        <item name="android:progressDrawable">@drawable/progress_horizontal_burn</item>
        <item name="android:maxHeight">50dip</item>
        <item name="android:minHeight">3dip</item>
        <item name="android:indeterminateOnly">false</item>
    </style>

    <style name="ProgressBar_Big" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:maxHeight">50dip</item>
        <item name="android:minHeight">15dip</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:indeterminateDrawable">@android:drawable/progress_indeterminate_horizontal</item>
        <item name="android:progressDrawable">@drawable/progress_horizontal_burn</item>
    </style>

    <style name="ProgressBar_Upload" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:maxHeight">50dip</item>
        <item name="android:minHeight">15dip</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:indeterminateDrawable">@android:drawable/progress_indeterminate_horizontal</item>
        <item name="android:progressDrawable">@drawable/progress_horizontal</item>
    </style>

    <style name="anim_popwindow_bottombar">
        <item name="android:windowEnterAnimation">@anim/popwin_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/popwin_bottom_out</item>
    </style>

    <style name="anim_popwindow_top">
        <item name="android:windowEnterAnimation">@anim/popwin_top_in</item>
        <item name="android:windowExitAnimation">@anim/popwin_top_out</item>
    </style>

    <style name="anim_popwindow_alpha">
        <item name="android:windowEnterAnimation">@anim/activity_alpha_in</item>
        <item name="android:windowExitAnimation">@anim/activity_alpha_out</item>
    </style>

    <style name="DialogStyle" parent="@android:style/Theme.Dialog">

        <!-- 屏幕背景不变暗 -->
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="SelectGiftDialog" parent="DialogTheme">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/pop_bg_white90</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="skill_text_style">
        <item name="android:layout_width">wrap_content</item> <!-- 宽度 -->
        <item name="android:layout_height">wrap_content</item> <!-- 高度 -->
        <item name="android:layout_marginTop">10dip</item>
        <item name="android:layout_marginLeft">25dip</item>
        <item name="android:layout_marginBottom">5dip</item>
        <item name="android:textColor">#303030</item> <!-- 字体颜色 -->
    </style>

    <style name="Dialog_Fullscreen">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="Theme.AppStartLoadTranslucent" parent="android:Theme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="Theme.UPPay" parent="android:style/Theme.Light">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="GiftCheckboxTheme" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/gift_select_selector</item>
    </style>
    
    <style name="SuspensionStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">@color/transparent</item>
    </style>
	
    <style name="WrapContentStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    
    <style name="FullWdithStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    
    <style name="FullHeightStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    
    <style name="FullScreenStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    
    <style name="UserInfoDeviderLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:background">@color/find_line</item>
    </style>
    
    <style name="carAnimDialog">
        <item name="android:windowNoTitle">true</item> <!-- 设置title -->
        <item name="android:windowBackground">@color/transparent_max_half_background</item>
        <item name="android:windowFrame">@null</item> <!-- 设置边框 -->
        <item name="android:windowIsTranslucent">true</item> <!-- 设置半透明 -->

    </style>
</resources>