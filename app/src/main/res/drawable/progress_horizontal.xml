<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item
        android:id="@android:id/progress"
        android:drawable="@drawable/img_chat_phototime_full"/>
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="0dip" />

            <gradient
                android:angle="270"
                android:centerY="0.75"
                android:endColor="@color/upload"
                android:startColor="@color/upload" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="0dip" />

                <gradient
                    android:angle="270"
                    android:centerY="0.75"
                    android:endColor="@color/my_favor_red"
                    android:startColor="@color/my_favor_red" />
            </shape>
        </clip>
    </item>

</layer-list>